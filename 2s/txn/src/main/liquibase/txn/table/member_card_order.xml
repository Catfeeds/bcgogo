<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="chenfanglei" id="member_card_order_1">
    <createTable tableName="member_card_order">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>

      <column name="shop_id" type="bigint"></column>
      <column name="no" type="varchar(50)"></column>
      <column name="customer_id" type="bigint"></column>
      <column name="executor_id" type="bigint"></column>
      <column name="dept_id" type="bigint"></column>
      <column name="total" type="double"></column>
      <column name="editor_id" type="bigint"></column>
      <column name="edit_date" type="bigint"></column>
      <column name="reviewer_id" type="bigint"></column>
      <column name="review_date" type="bigint"></column>
      <column name="invalidator_id" type="bigint"></column>
      <column name="invalidate_date" type="bigint"></column>
      <column name="vest_date" type="bigint"></column>
    </createTable>
  </changeSet>

  <changeSet id="member_card_order_2" author="chenfanglei">
    <addPrimaryKey tableName="member_card_order" columnNames="id" constraintName="pk_member_card_order"></addPrimaryKey>
  </changeSet>

  <changeSet id="member_card_order_3" author="chenfanglei">
    <createIndex tableName="member_card_order" indexName="idx_member_card_order_1">
      <column name="shop_id"></column>
      <column name="customer_id"></column>
    </createIndex>
  </changeSet>

  <changeSet id="member_card_order_4" author="chenfanglei">
    <addColumn tableName="member_card_order">
      <column name="memo" type="varchar(100)"></column>
    </addColumn>
  </changeSet>

  <changeSet id="member_card_order_5" author="chenfanglei">
    <modifyColumn tableName="member_card_order">
      <column name="memo" type="varchar(500)"></column>
    </modifyColumn>
  </changeSet>

  <changeSet id="member_card_order_6" author="liuWei">
      <createIndex tableName="member_card_order" indexName="idx_shopid_vestdate">
        <column name="shop_id"></column>
        <column name="vest_date"></column>
      </createIndex>
    </changeSet>

  <changeSet id="member_card_order_7" author="chenfanglei">
    <addColumn tableName="member_card_order">
      <column name="worth" type="double"></column>
      <column name="member_balance" type="double"></column>
    </addColumn>
  </changeSet>

  <changeSet id="member_card_order_8" author="chenfanglei">
      <addColumn tableName="member_card_order">
          <column name="old_member_no" type="varchar(50)"></column>
      </addColumn>
  </changeSet>

  <changeSet id="member_card_order_9" author="chenfanglei">
      <addColumn tableName="member_card_order">
          <column name="old_member_discount" type="double"></column>
          <column name="member_discount" type="double"></column>
      </addColumn>
  </changeSet>

    <changeSet id="member_card_order_10" author="jimuchen">
        <addColumn tableName="member_card_order">
            <column name="customer" type="varchar(100)"/>
            <column name="customer_company" type="varchar(20)"/>
            <column name="customer_contact" type="varchar(200)"/>
            <column name="customer_mobile" type="varchar(20)"/>
            <column name="customer_landline" type="varchar(20)"/>
            <column name="customer_address" type="varchar(50)"/>
            <column name="old_member_type" type="varchar(50)"/>
            <column name="old_member_status" type="varchar(50)"/>
        </addColumn>
    </changeSet>
  <changeSet id="member_card_order_11" author="liuWei">
        <addColumn tableName="member_card_order">
            <column name="statement_account_order_id" type="bigint"></column>
        </addColumn>
    </changeSet>

  <changeSet id = "member_card_order_12" author="jimuchen">
		<modifyColumn tableName="member_card_order">
      <column name="customer_mobile" type="varchar(100)"/>
      <column name="customer_landline" type="varchar(100)"/>
      <column name="customer_address" type="varchar(100)"/>
		</modifyColumn>
	</changeSet>

  <changeSet id="member_card_order_13" author="jimuchen">
    <addColumn tableName="member_card_order">
      <column name="member_order_type" type="varchar(100)"></column>
    </addColumn>
  </changeSet>
</databaseChangeLog>