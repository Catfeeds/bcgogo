<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="jimuchen" id="supplier_tran_stat_1">
    <createTable tableName="supplier_tran_stat">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="supplier_id" type="bigint"/>
      <column name="stat_year" type="int"/>
      <column name="stat_month" type="int"/>
      <column name="stat_day" type="int"/>
      <column name="times" type="int"/>
      <column name="total" type="numeric(18,1)"/>
      <column name="stat_time" type="bigint"/>
    </createTable>
  </changeSet>

  <changeSet author="jimuchen" id="supplier_tran_stat_2">
    <addPrimaryKey tableName="supplier_tran_stat" columnNames="id" constraintName="pk_supplier_tran_stat"/>
  </changeSet>

  <changeSet author="jimuchen" id="supplier_tran_stat_3">
    <createIndex tableName="supplier_tran_stat" indexName="IDX_SUPPLIER_TRAN_STAT_STAT_TIME">
      <column name="stat_time"/>
    </createIndex>
  </changeSet>

  <changeSet id="supplier_tran_stat_4_qiuxinyu" author="qiuxinyu">
      <dropIndex tableName="supplier_tran_stat" indexName="IDX_SUPPLIER_TRAN_STAT_STAT_TIME"/>
      <createIndex tableName="supplier_tran_stat" indexName="IDX_SUPPLIER_TRAN_STAT_SHOP_ID_SUPPLIER_ID">
        <column name="shop_id"/>
        <column name="supplier_id"/>
      </createIndex>
  </changeSet>

</databaseChangeLog>