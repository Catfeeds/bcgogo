<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="ndong" id="order_item_promotion_1">
        <createTable tableName="order_item_promotion">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="promotion_order_record_id" type="bigint"/>
            <column name="order_item_id" type="bigint"/>
            <column name="order_types" type="varchar(20)"/>
        </createTable>
        <addPrimaryKey tableName="order_item_promotion" columnNames="id" constraintName="pk_order_item_promotion"/>
    </changeSet>

    <changeSet author="ndong" id="order_item_promotion_2">
        <createIndex tableName="order_item_promotion" indexName="IDX_PROMOTION_ORDER_ORDER_RECORD_ID">
            <column name="promotion_order_record_id"/>
        </createIndex>
        <createIndex tableName="order_item_promotion" indexName="IDX_ORDER_ITEM_ID">
            <column name="order_item_id"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>