<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="zhuyinjia" id="inventory_alarm_1">
    <createTable tableName="inventory_alarm">
        <column name="id" type="bigint"/>
        <column name="created" type="bigint">
            <constraints nullable="false"/>
        </column>
        <column name="last_update" type="bigint">
            <constraints nullable="false"/>
        </column>
        <column name="version" type="bigint">
            <constraints nullable="true"/>
        </column>
        <column name="shop_id" type="bigint"/>
        <column name="product_id" type="bigint"/>
        <column name="amount_alarm" type="float"/>
        <column name="memo" type="varchar(500)"/>
    </createTable>
  </changeSet>

  <changeSet  id="inventory_alarm_2" author="zhuyinjia">
    <addPrimaryKey tableName="inventory_alarm" columnNames="id" constraintName="pk_inventory_alarm"/>
  </changeSet>

    <changeSet author="luyi" id="inventory_alarm_3">
        <createIndex tableName="inventory_alarm" indexName="IDX_SHOPID_PRODUCTID">
            <column name="shop_id"/>
            <column name="product_id"/>
        </createIndex>
    </changeSet>

  <changeSet author="jimuchen" id="inventory_alarm_4">
    <modifyColumn tableName="inventory_alarm">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>
</databaseChangeLog>