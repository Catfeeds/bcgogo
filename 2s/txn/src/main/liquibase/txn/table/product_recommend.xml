<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="xzhu" id="product_recommend_xzhu_1">
        <createTable tableName="product_recommend">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="shop_id" type="bigint"/>
            <column name="custom_score" type="double"/>

            <column name="seed_product_name" type="varchar(200)"/>
            <column name="seed_product_brand" type="varchar(200)" />
            <column name="seed_product_spec" type="varchar(200)" />
            <column name="seed_product_model" type="varchar(200)" />
            <column name="seed_product_vehicle_model" type="varchar(200)" />
            <column name="seed_product_vehicle_brand" type="varchar(200)" />

            <column name="matched_product_name" type="varchar(200)"/>
            <column name="matched_product_brand" type="varchar(200)" />
            <column name="matched_product_spec" type="varchar(200)" />
            <column name="matched_product_model" type="varchar(200)" />
            <column name="matched_product_vehicle_model" type="varchar(200)" />
            <column name="matched_product_vehicle_brand" type="varchar(200)" />

            <column name="matched_product_shop_id" type="bigint"/>
            <column name="matched_product_local_info_id" type="bigint"/>
            <column name="edit_date" type="bigint"/>
            <column name="matching_rule" type="varchar(50)"/>
            <column name="deleted" type="varchar(50)"/>
        </createTable>
    </changeSet>
    <changeSet author="xzhu" id="product_recommend_xzhu_2">
        <addPrimaryKey tableName="product_recommend" columnNames="id" constraintName="pk_product_recommend"/>
        <createIndex tableName="product_recommend" indexName="IDX_CUSTOM_SCORE">
            <column name="custom_score"/>
        </createIndex>
    </changeSet>
    <changeSet id="product_recommend_xzhu_3" author="xzhu">
        <addColumn tableName="product_recommend">
            <column name="product_recommend_type" type="varchar(200)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>