<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="liuWei" id="running_stat_1">
    <createTable tableName="running_stat">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="stat_year" type="bigint"/>
      <column name="stat_month" type="bigint"/>
      <column name="stat_day" type="bigint"/>

      <column name="running_sum" type="double"/>
      <column name="income_sum" type="double"/>
      <column name="cash_income" type="double"/>
      <column name="cheque_income" type="double"/>
      <column name="union_pay_income" type="double"/>
      <column name="expenditure_sum" type="double"/>
      <column name="cash_expenditure" type="double"/>
      <column name="cheque_expenditure" type="double"/>
      <column name="union_pay_expenditure" type="double"/>
      <column name="debt_new" type="double"/>
      <column name="debt_withdrawal" type="double"/>

      <column name="stat_date" type="bigint"/>
      <column name="current_debt_sum" type="double"/>

    </createTable>
  </changeSet>

  <changeSet author="liuWei" id="running_stat_2">
    <addPrimaryKey tableName="running_stat" columnNames="id" constraintName="pk_running_stat"/>
  </changeSet>

  <changeSet id="running_stat_3" author="liuWei">
    <createIndex tableName="running_stat" indexName="idx_running_stat_shopid_year_month_day">
      <column name="shop_id"/>
      <column name="stat_year"/>
      <column name="stat_month"/>
      <column name="stat_day"/>
    </createIndex>
  </changeSet>

  <changeSet id="running_stat_4" author="liuWei">
    <dropColumn tableName="running_stat" columnName="debt_new"/>
    <dropColumn tableName="running_stat" columnName="current_debt_sum"/>
    <dropColumn tableName="running_stat" columnName="debt_withdrawal"/>

    <addColumn tableName="running_stat">
      <column name="member_pay_income" type="double"/>
      <column name="debt_new_income" type="double"/>
      <column name="debt_withdrawal_income" type="double"/>
      <column name="deposit_pay_income" type="double"/>

      <column name="deposit_pay_expenditure" type="double"/>
      <column name="debt_new_expenditure" type="double"/>
      <column name="debt_withdrawal_expenditure" type="double"/>
    </addColumn>
  </changeSet>

  <changeSet id="running_stat_5" author="chenfanglei">
      <addColumn tableName="running_stat">
          <column name="strike_amount_expenditure" type="double"></column>
      </addColumn>
  </changeSet>

  <changeSet id="running_stat_6" author="liuWei">
      <addColumn tableName="running_stat">
          <column name="customer_debt_discount" type="double"></column>
          <column name="supplier_debt_discount" type="double"></column>
      </addColumn>
  </changeSet>

  <changeSet id="running_stat_7" author="liuWei">
      <addColumn tableName="running_stat">
          <column name="strike_amount_income" type="double"></column>
      </addColumn>
  </changeSet>

  <changeSet id="running_stat_8" author="chenfanglei">
      <addColumn tableName="running_stat">
          <column name="customer_return_debt" type="double"></column>
          <column name="supplier_return_debt" type="double"></column>
      </addColumn>
  </changeSet>

    <changeSet id="running_stat_9" author="zhuj">
      <addColumn tableName="running_stat">
          <column name="customer_deposit_pay_expenditure" type="double"></column>
          <column name="customer_deposit_pay_income" type="double"></column>
      </addColumn>
  </changeSet>

</databaseChangeLog>