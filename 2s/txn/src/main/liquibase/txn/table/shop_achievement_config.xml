<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lw" id="shop_achievement_config_1">
    <createTable tableName="shop_achievement_config">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>

      <column name="shop_id" type="bigint"></column>

      <column name="achievement_record_type" type="varchar(50)"></column>
      <column name="achievement_record_id" type="bigint"></column>
      <column name="last_vest_date" type="bigint"></column>

    </createTable>
  </changeSet>

  <changeSet id="shop_achievement_config_2" author="lw">
    <addPrimaryKey tableName="shop_achievement_config" columnNames="id"
                   constraintName="pk_shop_achievement_config"></addPrimaryKey>
  </changeSet>

  <changeSet id="shop_achievement_config_3" author="lw">
    <createIndex tableName="shop_achievement_config" indexName="idx_shopid_achievementrecordtype">
      <column name="shop_id"></column>
      <column name="achievement_record_type"></column>
    </createIndex>
  </changeSet>

  <changeSet id="shop_achievement_config_4" author="lw">
    <dropIndex tableName="shop_achievement_config" indexName="idx_shopid_achievementrecordtype"/>
    <createIndex tableName="shop_achievement_config" indexName="idx_shopid_achievementrecordtype_record_id">
      <column name="shop_id"></column>
      <column name="achievement_record_type"></column>
      <column name="achievement_record_id" type="bigint"></column>
    </createIndex>
  </changeSet>

</databaseChangeLog>