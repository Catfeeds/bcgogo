<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="xzhu" id="allocate_record_item_xzhu_1">
        <createTable tableName="allocate_record_item">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="allocate_record_id" type="bigint"/>
            <column name="product_id" type="bigint"/>
            <column name="product_history_id" type="bigint" />
            <column name="amount" type="double"/>
            <column name="cost_price" type="double"/>
            <column name="total_cost_price" type="double"/>
            <column name="unit" type="varchar(20)"/>
        </createTable>
    </changeSet>

    <changeSet id="allocate_record_item_xzhu_2" author="xzhu">
        <addPrimaryKey tableName="allocate_record_item" columnNames="id" constraintName="pk_allocate_record_item"/>
    </changeSet>

    <changeSet author="xzhu" id="allocate_record_item_xzhu_3">
        <addColumn tableName="allocate_record_item">
            <column name="storage_bin" type="varchar(50)"/>
        </addColumn>
    </changeSet>
    <changeSet author="xzhu" id="allocate_record_item_xzhu_4">
        <renameColumn tableName="allocate_record_item" oldColumnName="storage_bin" newColumnName="in_storage_bin" columnDataType="varchar(50)"/>
    </changeSet>
</databaseChangeLog>