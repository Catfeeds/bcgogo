<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="xzhu" id="order_status_change_log_1">
    <createTable tableName="order_status_change_log">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>
      <!-- 店面ID-->
      <column name="shop_id" type="bigint"/>
      <column name="user_id" type="bigint"/>
      <column name="cur_order_status" type="varchar(20)"/>
      <column name="pre_order_status" type="varchar(20)"/>
      <column name="order_id" type="bigint"/>
      <column name="order_type" type="varchar(20)"/>
    </createTable>
    <addPrimaryKey tableName="order_status_change_log" columnNames="id" constraintName="pk_order_status_change_log"/>
  </changeSet>
    <changeSet id="order_status_change_log_2" author="xzhu">
        <modifyColumn tableName="order_status_change_log">
            <column name="pre_order_status" type="varchar(100)"/>
            <column name="cur_order_status" type="varchar(100)"/>
            <column name="order_type" type="varchar(100)"/>
        </modifyColumn>
    </changeSet>
</databaseChangeLog>