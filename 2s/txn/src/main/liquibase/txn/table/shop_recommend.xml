<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="xzhu" id="shop_recommend_xzhu_1">
        <createTable tableName="shop_recommend">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="shop_id" type="bigint"/>
            <column name="custom_score" type="double"/>
            <column name="recommend_shop_id" type="bigint"/>
            <column name="edit_date" type="bigint"/>
            <column name="deleted" type="varchar(50)"/>
        </createTable>
    </changeSet>
    <changeSet author="xzhu" id="shop_recommend_xzhu_2">
        <addPrimaryKey tableName="shop_recommend" columnNames="id" constraintName="pk_shop_recommend"/>
        <createIndex tableName="shop_recommend" indexName="IDX_CUSTOM_SCORE">
            <column name="custom_score"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>