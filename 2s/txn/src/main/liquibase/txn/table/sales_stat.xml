<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="jimuchen" id="sales_stat_1">
    <createTable tableName="sales_stat">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="product_id" type="bigint"/>
      <column name="stat_year" type="int"/>
      <column name="stat_month" type="int"/>
      <column name="stat_day" type="int"/>
      <column name="times" type="int"/>
      <column name="amount" type="numeric(18,1)"/>
      <column name="total" type="numeric(18,1)"/>
      <column name="stat_time" type="bigint"/>
    </createTable>
  </changeSet>

  <changeSet author="jimuchen" id="sales_stat_2">
    <addPrimaryKey tableName="sales_stat" columnNames="id" constraintName="pk_sales_stat"/>
  </changeSet>

  <changeSet id="sales_stat_3" author="qiuxinyu">
      <createIndex tableName="sales_stat" indexName="IDX_SALES_STAT_SHOPID_PRODUCTID">
          <column name="shop_id"/>
          <column name="product_id"/>
      </createIndex>
  </changeSet>

  <changeSet id="sales_stat_4" author="liuWei">
    <createIndex tableName="sales_stat" indexName="idx_shopid_productid_year_month_day">
      <column name="shop_id"></column>
      <column name="product_id"></column>
      <column name="stat_year"></column>
      <column name="stat_month"></column>
      <column name="stat_day"></column>
    </createIndex>
  </changeSet>

  <changeSet id="sales_stat_5" author="liuWei">
    <createIndex tableName="sales_stat" indexName="idx_shopid_stattime_productid">
      <column name="shop_id"></column>
      <column name="stat_time"></column>
      <column name="product_id"></column>
    </createIndex>
  </changeSet>

</databaseChangeLog>