<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="zhuyinjia" id="product_remind_event_1">
        <createTable tableName="product_remind_event">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="shop_id" type="bigint"/>
            <column name="product_id" type="bigint"/>
            <column name="content" type="varchar(500)"/>
        </createTable>
    </changeSet>

    <changeSet id="product_remind_event_2" author="zhuyinjia">
        <addPrimaryKey tableName="product_remind_event" columnNames="id" constraintName="pk_product_remind_event"/>
    </changeSet>

  <changeSet author="jimuchen" id="product_remind_event_3">
    <modifyColumn tableName="product_remind_event">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

</databaseChangeLog>