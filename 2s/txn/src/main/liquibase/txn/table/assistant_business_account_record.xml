<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lw" id="assistant_business_account_record_1">
    <createTable tableName="assistant_business_account_record">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>

      <column name="shop_id" type="bigint"></column>

      <column name="vest_date" type="bigint"></column>

      <column name="assistant_id" type="bigint"></column>
      <column name="assistant_name" type="varchar(500)"></column>

      <column name="department_id" type="bigint"></column>
      <column name="department_name" type="varchar(500)"></column>

      <column name="business_category_id" type="bigint"></column>
      <column name="business_category" type="varchar(500)"></column>

      <column name="content" type="varchar(500)"></column>
      <column name="doc_no" type="varchar(500)"></column>
      <column name="business_account_id" type="bigint"></column>
      <column name="account_category" type="varchar(500)"></column>
      <column name="total" type="double"></column>
    </createTable>
  </changeSet>

  <changeSet id="assistant_business_account_record_2" author="lw">
    <addPrimaryKey tableName="assistant_business_account_record" columnNames="id"
                   constraintName="pk_assistant_business_account_record"></addPrimaryKey>
  </changeSet>

  <changeSet id="assistant_business_account_record_3" author="lw">
    <createIndex tableName="assistant_business_account_record" indexName="idx_shopid_assistantid">
      <column name="shop_id"></column>
      <column name="assistant_id"></column>
    </createIndex>
  </changeSet>

  <changeSet id="assistant_business_account_record_4" author="lw">
    <addColumn tableName="assistant_business_account_record">
      <column name="stat_time" type="bigint"/>
    </addColumn>
  </changeSet>

</databaseChangeLog>