<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="ZhangJuntao" id="notice_1">
        <createTable tableName="notice">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="receiver_shop_id" type="bigint"/>
            <column name="status" type="varchar(20)"/>
            <column name="content" type="varchar(1000)"/>
            <column name="shop_relation_invite_id" type="bigint"/>
            <column name="request_time" type="bigint"/>
            <column name="sender_shop_id" type="bigint"/>
            <column name="notice_type" type="varchar(50)"/>
            <column name="receiver_ids" type="varchar(500)"/>
        </createTable>
        <addPrimaryKey tableName="notice" columnNames="id" constraintName="pk_notice"/>
    </changeSet>
</databaseChangeLog>