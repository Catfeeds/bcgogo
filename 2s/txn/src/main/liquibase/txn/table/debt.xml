<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="zhouxiaochen" id="debt_1">
    <createTable tableName="debt">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>
      <column name="shopId" type="bigint"/>
      <column name="orderId" type="bigint"/>
      <column name="customerId" type="bigint"/>
      <column name="orderType" type="int"/>
      <column name="recievableId" type="bigint"/>
      <column name="orderTime" type="bigint"/>
      <column name="vehicleNumber" type="varchar(20)"/>
      <column name="content" type="varchar(200)"/>
      <column name="service" type="varchar(200)"/>
      <column name="material" type="varchar(500)"/>
      <column name="totalAmount" type="float"/>
      <column name="settledAmount" type="float"/>
      <column name="debt" type="float"/>
    </createTable>
  </changeSet>

  <changeSet id="debt_2" author="zhouxiaochen">
    <addPrimaryKey tableName="debt" columnNames="id" constraintName="pk_debt"/>
  </changeSet>
  <changeSet id="debt_3" author="zhouxiaochen">
    <createIndex tableName="debt" indexName="idx_debt_1">
      <column name="shopId"/>
      <column name="customerId"/>
    </createIndex>
  </changeSet>

  <changeSet author="caiwei" id="debt_4">
    <addColumn tableName="debt">
      <column name="pay_time" type="bigint"/>
      <column name="remind_time" type="bigint"/>
    </addColumn>
  </changeSet>

  <changeSet id="debt_5" author="caiwei">
    <createIndex tableName="debt" indexName="idx_debt_2">
      <column name="remind_time"/>
    </createIndex>
  </changeSet>

  <changeSet id="debt_6" author="zhoudongming">
    <addColumn tableName="debt">
      <column name="status" type="varchar(20)"/>
    </addColumn>
  </changeSet>

  <changeSet id="debt_7" author="jimuchen">
    <addColumn tableName="debt">
      <column name="status_enum" type="varchar(50)"/>
      <column name="order_type_enum" type="varchar(50)"/>
    </addColumn>
  </changeSet>

  <changeSet author="jimuchen" id="debt_8">
    <modifyColumn tableName="debt">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

  <changeSet id="debt_9" author="dongnan">
    <addColumn tableName="debt">
      <column name="receipt_no" type="varchar(50)"/>
    </addColumn>
  </changeSet>

  <changeSet id="debt_10_weilingfeng" author="weilingfeng">
    <addColumn tableName="debt">
      <column name="remind_status" type="varchar(50)"/>
    </addColumn>
  </changeSet>

</databaseChangeLog>