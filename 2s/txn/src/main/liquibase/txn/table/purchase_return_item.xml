<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="mazidong" id="purchase_return_item_1">
    <createTable tableName="purchase_return_item">
        <column name="id" type="bigint"/>
        <column name="created" type="bigint">
            <constraints nullable="false"/>
        </column>
        <column name="last_update" type="bigint">
            <constraints nullable="false"/>
        </column>
        <column name="version" type="bigint">
            <constraints nullable="true"/>
        </column>
        <column name="purchase_return_id" type="bigint"/>
        <column name="product_id" type="bigint"/>
        <column name="amount" type="float"/>
        <column name="price" type="float"/>
        <column name="total" type="float"/>
        <column name="memo" type="varchar(500)"/>
    </createTable>
  </changeSet>

  <changeSet  id="purchase_return_item_2" author="zhuyinjia">
    <addPrimaryKey tableName="purchase_return_item" columnNames="id" constraintName="pk_purchase_return_item"/>
  </changeSet>

    <changeSet author="luyi" id="purchase_return_item_3">
        <createIndex tableName="purchase_return_item" indexName="IDX_PURCHASERETURNITEM_PURCHASERETURNID">
            <column name="purchase_return_id"/>
        </createIndex>
    </changeSet>
     <changeSet author="qiuxinyu" id="purchase_return_item_4">
         <addColumn tableName="purchase_return_item">
             <column name="unit" type="varchar(20)"/>
         </addColumn>
     </changeSet>

  <changeSet author="jimuchen" id="purchase_return_item_5">
    <modifyColumn tableName="purchase_return_item">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>
    <changeSet author="xzhu" id="purchase_return_item_6">
        <addColumn tableName="purchase_return_item">
            <column name="reserved" type="float"/>
        </addColumn>
    </changeSet>

    <changeSet id="purchase_return_item_7" author="jimuchen">
      <addColumn tableName="purchase_return_item">
          <column name="product_history_id" type="bigint" />
      </addColumn>
    </changeSet>

  <changeSet id="purchase_return_item_8" author="jimuchen">
    <modifyColumn tableName="purchase_return_item">
      <column name="total" type="double(20,2)"/>
      <column name="price" type="double(20,2)"/>
		</modifyColumn>
  </changeSet>
</databaseChangeLog>