<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lw" id="product_achievement_history_1">
    <createTable tableName="product_achievement_history">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>

      <column name="shop_id" type="bigint"></column>
      <column name="product_id" type="bigint"></column>
      <column name="product_name" type="varchar(200)"></column>
      <column name="product_kind_id" type="bigint"></column>
      <column name="product_kind_name" type="varchar(200)"></column>
      <column name="achievement_type" type="varchar(50)"></column>
      <column name="achievement_amount" type="double"></column>
      <column name="change_time" type="bigint"></column>
      <column name="change_user_id" type="bigint"></column>
    </createTable>
  </changeSet>

  <changeSet id="product_achievement_history_2" author="lw">
    <addPrimaryKey tableName="product_achievement_history" columnNames="id"
                   constraintName="pk_product_achievement_history"></addPrimaryKey>
  </changeSet>

  <changeSet id="product_achievement_history_3" author="lw">
    <createIndex tableName="product_achievement_history" indexName="idx_shopid_productid">
      <column name="shop_id"></column>
      <column name="product_id"></column>
    </createIndex>
  </changeSet>

  <changeSet id="product_achievement_history_4" author="lw">
    <renameColumn tableName="product_achievement_history" oldColumnName="achievement_type" newColumnName="sales_total_achievement_type"
                  columnDataType="varchar(50)"/>
    <renameColumn tableName="product_achievement_history" oldColumnName="achievement_amount" newColumnName="sales_total_achievement_amount"
                  columnDataType="double"/>
    <addColumn tableName="product_achievement_history">
      <column name="sales_profit_achievement_type" type="varchar(50)"/>
      <column name="sales_profit_achievement_amount" type="double"/>
    </addColumn>
  </changeSet>

</databaseChangeLog>