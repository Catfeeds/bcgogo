<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="weilingfeng" id="price_fluctuation_stat_1">
    <createTable tableName="price_fluctuation_stat">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="product_id" type="bigint"/>
      <column name="times" type="int"/>
      <column name="amount" type="numeric(18,1)"/>
      <column name="total" type="numeric(18,1)"/>
      <column name="stat_time" type="bigint"/>
    </createTable>
  </changeSet>

  <changeSet author="weilingfeng" id="price_fluctuation_stat_2">
    <addPrimaryKey tableName="price_fluctuation_stat" columnNames="id" constraintName="pk_price_fluctuation_stat"/>
  </changeSet>

</databaseChangeLog>