<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="jinyuan" id="preferential_policy_1">
        <createTable tableName="preferential_policy">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="recharge_amount" type="float"/>
            <column name="present_amount" type="float"/>
        </createTable>

        <addPrimaryKey tableName="preferential_policy" columnNames="id" constraintName="pk_preferential_policy"/>

    </changeSet>
    <changeSet author="jinyuan" id="preferential_policy_2">
      <addColumn tableName="preferential_policy">
          <column name="deleted_type" type="varchar(50)"></column>
      </addColumn>
    </changeSet>
</databaseChangeLog>