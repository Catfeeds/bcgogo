<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="chenfanglei" id="qualified_credentials_1">
        <createTable tableName="qualified_credentials">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="shop_id" type="bigint"/>
            <column name="customer" type="varchar(100)"></column>
            <column name="customer_id" type="bigint"></column>
            <column name="license_no" type="varchar(20)"></column>
            <column name="engine_no" type="varchar(50)"></column>
            <column name="chassis_number" type="varchar(50)"></column>
            <column name="repair_type" type="varchar(50)"></column>
            <column name="repair_contract_no" type="varchar(50)"></column>
            <column name="produced_mileage" type="varchar(50)"></column>
            <column name="brand" type="varchar(100)"></column>
            <column name="model" type="varchar(100)"></column>
            <column name="quality_inspectors" type="varchar(100)"></column>
            <column name="shop_name" type="varchar(100)"></column>
            <column name="start_date_str" type="varchar(100)"></column>
            <column name="start_date" type="bigint"></column>
            <column name="end_date_str" type="varchar(100)"></column>
            <column name="end_date" type="bigint"></column>
            <column name="order_id" type="bigint"></column>
            <column name="no" type="varchar(50)"></column>
            <column name="repair_invoice_number" type="varchar(50)"></column>
            <column name="travel_date" type="varchar(50)"></column>
            <column name="travel_length" type="varchar(50)"></column>
        </createTable>
        <addPrimaryKey tableName="qualified_credentials" columnNames="id" constraintName="pk_qualified_credentials"/>
    </changeSet>

    <changeSet id="qualified_credentials_2" author="chenfanglei">
        <createIndex tableName="qualified_credentials" indexName="IDX_qualified_credentials_001">
            <column name="shop_id"></column>
            <column name="order_id"></column>
        </createIndex>
    </changeSet>
</databaseChangeLog>