<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lw" id="shop_product_match_result_1">
    <createTable tableName="shop_product_match_result">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>

      <column name="matched_id" type="bigint"/>
      <column name="product_name" type="varchar(200)"/>
      <column name="product_brand" type="varchar(200)"/>
      <column name="sales_amount" type="double"/>
      <column name="sales_unit" type="varchar(50)"/>
      <column name="inventory_amount" type="double"/>
      <column name="inventory_unit" type="varchar(50)"/>
      <column name="stat_time" type="bigint"/>
      <column name="shop_kind" type="varchar(50)"/>
      <column name="week_of_year" type="bigint"/>
    </createTable>
  </changeSet>

  <changeSet author="lw" id="shop_product_match_result_2">
    <addPrimaryKey tableName="shop_product_match_result" columnNames="id"
                   constraintName="pk_shop_product_match_result"/>
  </changeSet>

  <changeSet author="lw" id="shop_product_match_result_3">
    <createIndex tableName="shop_product_match_result" indexName="IDX_SHOPID_NAME_BRAND_WEEK">
      <column name="shop_id"/>
      <column name="week_of_year"/>
      <column name="product_name"/>
      <column name="product_brand"/>
    </createIndex>
  </changeSet>

  <changeSet id="shop_product_match_result_4" author="lw">
    <addColumn tableName="shop_product_match_result">
      <column name="stat_day" type="bigint"/>
      <column name="stat_month" type="bigint"/>
      <column name="stat_year" type="bigint"/>
    </addColumn>
  </changeSet>

  <changeSet author="lw" id="shop_product_match_result_5">
    <createIndex tableName="shop_product_match_result" indexName="IDX_SHOPID_YEAR_MONTH_DAY">
      <column name="shop_id"/>
      <column name="stat_day"/>
      <column name="stat_month"/>
      <column name="stat_year"/>
    </createIndex>
  </changeSet>

  <changeSet author="lw" id="shop_product_match_result_6">
    <dropIndex tableName="shop_product_match_result" indexName="IDX_SHOPID_NAME_BRAND_WEEK"/>
  </changeSet>

</databaseChangeLog>