<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="mazidong" id="purchase_inventory_item_1">
    <createTable tableName="purchase_inventory_item">
        <column name="id" type="bigint"/>
        <column name="created" type="bigint">
            <constraints nullable="false"/>
        </column>
        <column name="last_update" type="bigint">
            <constraints nullable="false"/>
        </column>
        <column name="version" type="bigint">
            <constraints nullable="true"/>
        </column>
        <column name="purchase_inventory_id" type="bigint"/>
        <column name="purchase_item_id" type="bigint"/>
        <column name="product_id" type="bigint"/>
        <column name="amount" type="float"/>
        <column name="price" type="float"/>
        <column name="total" type="float"/>
        <column name="memo" type="varchar(500)"/>
    </createTable>
  </changeSet>

  <changeSet  id="purchase_inventory_item_2" author="zhuyinjia">
    <addPrimaryKey tableName="purchase_inventory_item" columnNames="id" constraintName="pk_purchase_inventory_item"/>
  </changeSet>

   <changeSet author="zhouxiaochen" id="purchase_inventory_item_3">
        <addColumn tableName="purchase_inventory_item">
            <column name="vehicle_brand" type="varchar(50)"/>
            <column name="vehicle_model" type="varchar(50)"/>
            <column name="vehicle_year" type="varchar(50)"/>
            <column name="vehicle_engine" type="varchar(50)"/>
        </addColumn>
  </changeSet>

    <changeSet author="luyi" id="purchase_inventory_item_4">
        <createIndex tableName="purchase_inventory_item" indexName="IDX_PURCHASEINVENTORYITEM_PURCHASEINVENTORYID">
            <column name="purchase_inventory_id"/>
        </createIndex>
        <createIndex tableName="purchase_inventory_item" indexName="IDX_PURCHASEINVENTORYITEM_PRODUCTID">
            <column name="product_id"/>
        </createIndex>
    </changeSet>

   <changeSet author="caiwei" id="purchase_inventory_item_5">
        <dropIndex indexName="IDX_PURCHASEINVENTORYITEM_PRODUCTID" tableName="purchase_inventory_item" />
    </changeSet>
     <changeSet author="qiuxinyu" id="purchase_inventory_item_6" >
        <addColumn tableName="purchase_inventory_item">
            <column name="unit" type="varchar(20)"/>
        </addColumn>
</changeSet>

  <changeSet author="jimuchen" id="purchase_inventory_item_7">
    <modifyColumn tableName="purchase_inventory_item">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

  <changeSet id="purchase_inventory_item_8" author="chenfanglei">
      <addColumn tableName="purchase_inventory_item">
          <column name="product_kind" type="varchar(200)"></column>
      </addColumn>
  </changeSet>

  <changeSet id="purchase_inventory_item_9" author="jimuchen">
      <addColumn tableName="purchase_inventory_item">
          <column name="product_history_id" type="bigint"></column>
      </addColumn>
  </changeSet>

  <changeSet id="purchase_inventory_item_10" author="jimuchen">
    <modifyColumn tableName="purchase_inventory_item">
      <column name="total" type="double(20,2)"/>
      <column name="price" type="double(20,2)"/>
		</modifyColumn>
  </changeSet>

    <changeSet id="purchase_inventory_item_11" author="yangwj">
        <modifyColumn tableName="purchase_inventory_item">
            <column name="vehicle_brand" type="varchar(200)"/>
            <column name="vehicle_model" type="varchar(200)"/>
        </modifyColumn>
    </changeSet>

</databaseChangeLog>