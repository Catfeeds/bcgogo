<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="zhuyinjia" id="vehicle_service_history_1">
    <createTable tableName="vehicle_service_history">
        <column name="id" type="bigint"/>
        <column name="created" type="bigint">
            <constraints nullable="false"/>
        </column>
        <column name="last_update" type="bigint">
            <constraints nullable="false"/>
        </column>
        <column name="version" type="bigint">
            <constraints nullable="true"/>
        </column>
        <column name="shop_id" type="bigint"/>
        <column name="vehicle_id" type="bigint"/>
        <column name="customer_id" type="bigint"/>
        <column name="customer" type="varchar(20)"/>
        <column name="service_id" type="bigint"/>
        <column name="service" type="varchar(20)"/>
        <column name="service_date" type="bigint"/>
        <column name="total" type="float"/>
        <column name="memo" type="varchar(500)"/>
    </createTable>
  </changeSet>

  <changeSet  id="vehicle_service_history_2" author="zhuyinjia">
    <addPrimaryKey tableName="vehicle_service_history" columnNames="id" constraintName="pk_vehicle_service_history"/>
  </changeSet>

  <changeSet author="jimuchen" id="vehicle_service_history_3">
    <modifyColumn tableName="vehicle_service_history">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

</databaseChangeLog>