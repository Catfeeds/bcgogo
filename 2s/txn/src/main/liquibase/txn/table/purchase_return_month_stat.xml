<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="jimuchen" id="purchase_return_month_stat_1">
    <createTable tableName="purchase_return_month_stat">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="supplier_id" type="bigint"/>
      <column name="product_id" type="bigint"/>
      <column name="stat_year" type="int"/>
      <column name="stat_month" type="int"/>
      <column name="times" type="int"/>
      <column name="amount" type="numeric(18,1)"/>
      <column name="total" type="numeric(18,1)"/>
      <column name="type" type="varchar(50)"/>
    </createTable>
    <addPrimaryKey tableName="purchase_return_month_stat" columnNames="id" constraintName="pk_purchase_return_month_stat"/>
  </changeSet>

  <changeSet id="purchase_return_month_stat_2" author="liuWei">
    <dropColumn tableName="purchase_return_month_stat" columnName="type"></dropColumn>
    <modifyColumn tableName="purchase_return_month_stat"><column name="total" type="double"/></modifyColumn>
    <modifyColumn tableName="purchase_return_month_stat"><column name="amount" type="double"/></modifyColumn>
  </changeSet>

  <changeSet author="liuWei" id="purchase_return_month_stat_3">
    <createIndex tableName="purchase_return_month_stat" indexName="IDX_SHOPID_STATYEAR_STATMONTH">
      <column name="shop_id"/>
      <column name="stat_year"/>
      <column name="stat_month"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>