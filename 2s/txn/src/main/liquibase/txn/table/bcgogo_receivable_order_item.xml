<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="zhangjuntao" id="bcgogo_receivable_order_item_xzhu_1">
        <createTable tableName="bcgogo_receivable_order_item">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="bigint"/>
            <column name="total" type="double"/>
            <column name="amount" type="double"/>
            <column name="price" type="double"/>
            <column name="product_id" type="bigint"/>
            <column name="memo" type="varchar(500)"/>
        </createTable>
        <addPrimaryKey tableName="bcgogo_receivable_order_item" columnNames="id" constraintName="pk_bcgogo_receivable_order_item"/>
        <createIndex tableName="bcgogo_receivable_order_item" indexName="IDX_BCGOGO_RECEIVABLE_ORDER_ORDERID">
            <column name="order_id"/>
        </createIndex>
    </changeSet>
    <changeSet id="bcgogo_receivable_order_item_xzhu_2" author="xzhu">
        <addColumn tableName="bcgogo_receivable_order_item">
            <column name="product_name" type="varchar(200)"/>
            <column name="product_property_id" type="bigint"/>
            <column name="product_kind" type="varchar(200)"/>
            <column name="product_type" type="varchar(200)"/>
            <column name="product_text" type="varchar(200)"/>
        </addColumn>
    </changeSet>
    <changeSet id="bcgogo_receivable_order_item_xzhu_3" author="xzhu">
        <addColumn tableName="bcgogo_receivable_order_item">
            <column name="unit" type="varchar(50)"/>
        </addColumn>
    </changeSet>
    <changeSet id="bcgogo_receivable_order_item_xzhu_4" author="xzhu">
        <addColumn tableName="bcgogo_receivable_order_item">
            <column name="image_path" type="varchar(100)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>