<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="yangwj" id="repair_order_item_secondary_1">
        <createTable tableName="repair_order_item_secondary">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="shop_id" type="bigint"/>
            <column name="repair_order_secondary_id" type="bigint"/>
            <column name="commodity_code" type="varchar(255)"/>
            <column name="product_name" type="varchar(255)"/>
            <column name="product_id" type="bigint"/>
            <column name="brand" type="varchar(255)"/>
            <column name="spec" type="varchar(255)"/>
            <column name="model" type="varchar(255)"/>
            <column name="price" type="float"/>
            <column name="amount" type="float"/>
            <column name="unit" type="varchar(50)"/>
            <column name="total" type="float"/>
            <column name="storage_bin" type="varchar(50)"/>
            <column name="inventory_amount" type="float"/>
        </createTable>
    </changeSet>
    <changeSet id="repair_order_item_secondary_2" author="yangwj">
        <addPrimaryKey tableName="repair_order_item_secondary" columnNames="id" constraintName="pk_repair_order_item_secondary"/>
    </changeSet>
</databaseChangeLog>