<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lw" id="member_achievement_history_1">
    <createTable tableName="member_achievement_history">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>

      <column name="shop_id" type="bigint"></column>
      <column name="member_card_id" type="bigint"></column>
      <column name="member_card_type" type="varchar(200)"></column>
      <column name="achievement_type" type="varchar(50)"></column>
      <column name="achievement_amount" type="double"></column>
      <column name="change_time" type="bigint"></column>
      <column name="change_user_id" type="bigint"></column>
    </createTable>
  </changeSet>

  <changeSet id="member_achievement_history_2" author="lw">
    <addPrimaryKey tableName="member_achievement_history" columnNames="id"
                   constraintName="pk_member_achievement_history"></addPrimaryKey>
  </changeSet>

  <changeSet id="member_achievement_history_3" author="lw">
    <createIndex tableName="member_achievement_history" indexName="idx_shopid_membercardid">
      <column name="shop_id"></column>
      <column name="member_card_id"></column>
    </createIndex>
  </changeSet>

  <changeSet id="member_achievement_history_4" author="lw">
    <addColumn tableName="member_achievement_history">
      <column name="achievement_member_type" type="varchar(50)"></column>
    </addColumn>
  </changeSet>

  <changeSet id="member_card_order_5" author="lw">
    <addColumn tableName="member_achievement_history">
      <column name="member_order_type" type="varchar(100)"></column>
    </addColumn>
  </changeSet>

  <changeSet id="member_achievement_history_6" author="lw">
    <dropIndex tableName="member_achievement_history" indexName="idx_shopid_membercardid"/>
    <createIndex tableName="member_achievement_history" indexName="idx_shopid_changetime">
      <column name="shop_id"></column>
      <column name="change_time"></column>
    </createIndex>
  </changeSet>


</databaseChangeLog>