<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="liuWei" id="business_stat_1">
    <createTable tableName="business_stat">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="stat_year" type="bigint"/>
      <column name="stat_month" type="bigint"/>
      <column name="stat_day" type="bigint"/>
      <column name="sales" type="numeric(18,1)"/>
      <column name="wash" type="numeric(18,1)"/>
      <column name="service" type="numeric(18,1)"/>
      <column name="product_cost" type="numeric(18,1)"/>
      <column name="stat_sum" type="numeric(18,1)"/>
    </createTable>
  </changeSet>

  <changeSet author="liuWei" id="business_stat_2">
    <addPrimaryKey tableName="business_stat" columnNames="id" constraintName="pk_business_stat"/>
  </changeSet>

  <changeSet author="liuWei" id="business_stat_3">
    <createIndex tableName="business_stat" indexName="idx_business_stat_shopid_statyear">
      <column name="shop_id"/>
      <column name="stat_year"/>
    </createIndex>
  </changeSet>

  <changeSet id="business_stat_4" author="liuWei">
    <addColumn tableName="business_stat">
      <column name="stat_time" type="bigint"/>
    </addColumn>
  </changeSet>

  <changeSet id="business_stat_5" author="liuWei">
    <createIndex tableName="business_stat" indexName="idx_business_stat_id_year_time">
      <column name="shop_id"/>
      <column name="stat_year"/>
      <column name="stat_time"/>
    </createIndex>
  </changeSet>

  <changeSet author="liuWei" id="business_stat_6">
    <dropIndex tableName="business_stat" indexName="idx_business_stat_id_year_time"/>
  </changeSet>

  <changeSet id="business_stat_7" author="liuWei">
    <createIndex tableName="business_stat" indexName="idx_business_stat_shopid_year_month_day_time">
      <column name="shop_id"/>
      <column name="stat_year"/>
      <column name="stat_month"/>
      <column name="stat_day"/>
      <column name="stat_time"/>
    </createIndex>
  </changeSet>

  <changeSet author="liuWei" id="business_stat_8">
    <dropIndex tableName="business_stat" indexName="idx_business_stat_shopid_statyear"/>
  </changeSet>

  <changeSet author="jimuchen" id="business_stat_9">
    <modifyColumn tableName="business_stat">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

  <changeSet id="business_stat_10" author="liuWei">
    <addColumn tableName="business_stat">
      <column name="member_income" type="double"/>
      <column name="other_income" type="double"/>
    </addColumn>
  </changeSet>


  <changeSet id="business_stat_11" author="liuWei">
    <addColumn tableName="business_stat">
      <column name="rent_expenditure" type="double"/>
      <column name="salary_expenditure" type="double"/>
      <column name="utilities_expenditure" type="double"/>
      <column name="other_expenditure" type="double"/>
    </addColumn>
  </changeSet>

  <changeSet id="business_stat_12" author="liuWei">
    <addColumn tableName="business_stat">
      <column name="order_other_income_cost" type="double"/>
    </addColumn>
  </changeSet>


</databaseChangeLog>