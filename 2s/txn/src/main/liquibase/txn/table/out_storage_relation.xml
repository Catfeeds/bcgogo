<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="qiuxinyu" id="out_storage_relation_1">
    <createTable tableName="out_storage_relation">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="out_storage_order_id" type="bigint"/>
      <column name="shop_id" type="bigint"/>
      <column name="relation_time" type="bigint"/>
      <column name="out_storage_order_type" type="varchar(30)"/>
      <column name="out_storage_item_id" type="bigint"/>
      <column name="product_id" type="bigint"/>
      <column name="out_storage_item_amount" type="double"/>
      <column name="out_storage_unit" type="varchar(20)"/>
      <column name="related_order_type" type="varchar(30)"/>
      <column name="related_order_id" type="bigint"/>
      <column name="related_item_id" type="bigint"/>
      <column name="use_related_amount" type="double"/>
      <column name="related_supplier_id" type="bigint"/>
      <column name="out_storage_type" type="varchar(30)"/>
      <column name="supplier_type" type="varchar(30)"/>
    </createTable>
      <addPrimaryKey tableName="out_storage_relation" columnNames="id" constraintName="pk_out_storage_relation_id"/>
  </changeSet>

  <changeSet author="lw" id="out_storage_relation_2">
    <addColumn tableName="out_storage_relation">
      <column name="related_supplier_name" type="varchar(200)"/>
    </addColumn>
  </changeSet>

  <changeSet author="lw" id="out_storage_relation_3">
    <addColumn tableName="out_storage_relation">
      <column name="related_unit" type="varchar(50)"/>
    </addColumn>
  </changeSet>

  <changeSet author="lw" id="out_storage_relation_4">
    <addColumn tableName="out_storage_relation">
      <column name="is_disabled" type="varchar(20)"/>
    </addColumn>
  </changeSet>

  <changeSet author="lw" id="out_storage_relation_5">
    <addColumn tableName="out_storage_relation">
      <column name="supplier_related_amount" type="double"/>
    </addColumn>
  </changeSet>

    <changeSet author="ndong" id="out_storage_relation_6">
    <addColumn tableName="out_storage_relation">
      <column name="order_status" type="varchar(30)"/>
    </addColumn>
  </changeSet>

  <changeSet id="out_storage_relation_7" author="jimuchen">
    <createIndex tableName="out_storage_relation" indexName="IDX_SHOP_ID_ORDER_ID">
      <column name="shop_id"/>
      <column name="out_storage_order_id"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>