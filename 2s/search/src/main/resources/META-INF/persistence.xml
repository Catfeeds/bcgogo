<?xml version="1.0" encoding="utf-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="search" transaction-type="RESOURCE_LOCAL">
    <class>com.bcgogo.search.model.ItemIndex</class>
    <class>com.bcgogo.search.model.InventorySearchIndex</class>
    <class>com.bcgogo.search.model.CurrentUsedProduct</class>
    <class>com.bcgogo.search.model.CurrentUsedVehicle</class>
    <class>com.bcgogo.search.model.OrderIndex</class>
    <class>com.bcgogo.search.model.SolrMatchStopWord</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>

  </persistence-unit>


</persistence>
