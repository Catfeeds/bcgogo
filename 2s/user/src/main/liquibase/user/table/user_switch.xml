<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="weilingfeng" id="user_switch_1">
        <createTable tableName="user_switch">
            <column name="id" type="bigint"/>
            <column name="version" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="shop_id" type="bigint"/>
            <column name="scene" type="varchar(50)"/>
            <column name="status" type="varchar(10)"/>
        </createTable>
        <addPrimaryKey tableName="user_switch" columnNames="id" constraintName="pk_user_switch"/>
    </changeSet>

    <changeSet id="user_switch_2" author="weilingfeng">
        <createIndex tableName="user_switch" indexName="index_user_switch">
            <column name="shop_id"></column>
            <column name="scene"></column>
        </createIndex>
    </changeSet>

    <changeSet id="user_switch_3_zhangjuntao" author="zhangjuntao">
        <addColumn tableName="user_switch">
            <column name="menu_id" type="bigint"/>
        </addColumn>
        <dropIndex tableName="user_switch" indexName="index_user_switch"/>
        <createIndex tableName="user_switch" indexName="index_user_switch_shopid_scene_menuid">
            <column name="shop_id"/>
            <column name="scene"/>
            <column name="menu_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>