<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="chenfanglei" id="member_recharge_order_1">
        <createTable tableName="member_recharge_order">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="shop_id" type="bigint"></column>
            <column name="customer_id" type="bigint"></column>
            <column name="member_id" type="bigint"></column>
            <column name="pay_amount" type="double"></column>
            <column name="recharge_amount" type="bigint"></column>
            <column name="old_balance" type="double"></column>
            <column name="new_balance" type="double"></column>
            <column name="accumulate_points" type="bigint"></column>
        </createTable>
    </changeSet>

    <changeSet id="member_recharge_order_2" author="chenfanglei">
        <addPrimaryKey tableName="member_recharge_order" columnNames="id" constraintName="pk_member_recharge_order"></addPrimaryKey>
    </changeSet>

    <changeSet id="member_recharge_order_3" author="chenfanglei">
        <createIndex tableName="member_recharge_order" indexName="idx_member_recharge_order_1">
            <column name="shop_id"></column>
            <column name="member_id"></column>
        </createIndex>
    </changeSet>
</databaseChangeLog>