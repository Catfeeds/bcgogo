<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lw" id="business_scope_01">
    <createTable tableName="business_scope">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="customer_id" type="bigint"/>
      <column name="supplier_id" type="bigint"/>
      <column name="product_category_id" type="bigint"/>
    </createTable>

    <addPrimaryKey tableName="business_scope" columnNames="id" constraintName="pk_business_scope"/>
    <createIndex tableName="business_scope" indexName="idx_shopid_customer_supplier">
      <column name="shop_id"></column>
      <column name="customer_id"></column>
      <column name="supplier_id"></column>
    </createIndex>

  </changeSet>

</databaseChangeLog>