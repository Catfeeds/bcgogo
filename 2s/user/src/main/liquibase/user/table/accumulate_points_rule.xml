<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="chenfanglei" id="accumulate_points_rule_1">
        <createTable tableName="accumulate_points_rule">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="shop_id" type="bigint"></column>
            <column name="accumulate_ratio" type="int"></column>
            <column name="consume_ratio" type="int"></column>
        </createTable>
    </changeSet>

    <changeSet id="accumulate_points_rule_2" author="chenfanglei">
        <addPrimaryKey tableName="accumulate_points_rule" columnNames="id" constraintName="pk_accumulate_points_rule"></addPrimaryKey>
    </changeSet>

    <changeSet id="accumulate_points_rule_3" author="chenfanglei">
        <createIndex tableName="accumulate_points_rule" indexName="idx_accumulate_points_rule_1">
            <column name="shop_id"></column>
        </createIndex>
    </changeSet>
</databaseChangeLog>