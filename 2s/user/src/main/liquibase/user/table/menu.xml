<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="zhangjuntao" id="menu_1">
        <createTable tableName="menu">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="grade" type="int"/>
            <column name="label" type="varchar(100)"/>
            <column name="resource_id" type="bigint"/>
            <column name="parent_id" type="bigint"/>
            <column name="href" type="varchar(200)"/>
        </createTable>
        <addPrimaryKey tableName="menu" columnNames="id" constraintName="pk_menu"/>
    </changeSet>
    <changeSet author="zhangjuntao" id="menu_2">
        <addColumn tableName="menu">
            <column name="sort" type="int"/>
        </addColumn>
    </changeSet>
    <changeSet author="zhangjuntao" id="menu_3">
        <addColumn tableName="menu">
            <column name="menu_name" type="varchar(200)"/>
        </addColumn>
    </changeSet>
    <changeSet id="menu_4_qiuxinyu" author="qiuxinyu">
        <createIndex tableName="menu" indexName="idx_menu_resource_id">
            <column name="resource_id"/>
        </createIndex>
        <createIndex tableName="menu" indexName="idx_menu_menu_name">
            <column name="menu_name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>