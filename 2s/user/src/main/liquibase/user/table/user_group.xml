<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="mazidong" id="user_group_1">
    <createTable tableName="user_group">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="name" type="varchar(20)"/>
      <column name="state" type="int"/>
      <column name="memo" type="varchar(500)"/>
    </createTable>
  </changeSet>

  <changeSet author="xiaojian" id="user_group_2">
    <addPrimaryKey tableName="user_group" columnNames="id" constraintName="pk_user_group"/>
  </changeSet>

  <changeSet author="zoujianhong" id="user_group_3">
    <createIndex tableName="user_group" indexName="index_usergroup_shopid">
      <column name="shop_id"/>
    </createIndex>
  </changeSet>
  <changeSet id="user_group_4" author="zhangjuntao">
    <addColumn tableName="user_group">
      <column name="status" type="varchar(20)"/>
    </addColumn>
  </changeSet>
  <changeSet author="jimuchen" id="user_group_4"> <!-- todo id 有错误-->
    <modifyColumn tableName="user_group">
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
    </modifyColumn>
  </changeSet>
  <changeSet id="user_group_6" author="zhangjuntao">
    <addColumn tableName="user_group">
      <column name="value" type="varchar(100)"/>
      <column name="type" type="varchar(50)"/>
    </addColumn>
  </changeSet>

  <changeSet id="user_group_7_zhangjuntao" author="zhangjuntao">
    <modifyColumn tableName="user_group">
      <column name="name" type="varchar(100)"/>
    </modifyColumn>
  </changeSet>

    <changeSet id="user_group_8_zhangjuntao" author="zhangjuntao">
        <addColumn tableName="user_group">
            <column name="variety" type="varchar(30)"/>
            <column name="user_group_no" type="varchar(10)"/>
        </addColumn>
    </changeSet>
    <changeSet id="user_group_9_qiuxinyu" author="qiuxinyu">
        <createIndex tableName="user_group" indexName="idx_user_group_name">
            <column name="name"></column>
        </createIndex>
    </changeSet>
</databaseChangeLog>