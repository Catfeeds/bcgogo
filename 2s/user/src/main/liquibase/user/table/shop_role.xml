<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="zhangjuntao" id="shop_role_1">
        <createTable tableName="shop_role">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="shop_type" type="varchar(30)"/>
            <column name="role_id" type="bigint"/>
        </createTable>
        <addPrimaryKey tableName="shop_role" columnNames="id" constraintName="pk_shop_role"/>
    </changeSet>
    <changeSet author="zhangjuntao" id="shop_role_2_zhangjuntao">
        <addColumn tableName="shop_role">
            <column name="shop_id" type="bigint"/>
            <column name="shop_version_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet id="shop_role_3_qiuxinyu" author="qiuxinyu">
        <createIndex tableName="shop_role" indexName="idx_shop_role_shop_version_id_role_id">
            <column name="shop_version_id"/>
            <column name="role_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>