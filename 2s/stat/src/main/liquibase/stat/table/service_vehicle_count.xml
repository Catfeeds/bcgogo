<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="zhangchuanlong" id="service_vehicle_count_1">
    <createTable tableName="service_vehicle_count">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="service_time" type="bigint"/>
      <column name="count" type="bigint"/>
    </createTable>
  </changeSet>

    <changeSet author="zhangchuanlong" id="service_vehicle_count_2">
        <addPrimaryKey tableName="service_vehicle_count" columnNames="id" constraintName="pk_service_vehicle_count"/>
    </changeSet>

    <changeSet author="zoujianhong" id="service_vehicle_count_3">
      <createIndex tableName="service_vehicle_count" indexName="idx_service_vehicle_count_shopid_servicetime">
          <column name="shop_id" />
          <column name="service_time" />
      </createIndex>
  </changeSet>

  <changeSet author="jimuchen" id="service_vehicle_count_4">
    <modifyColumn tableName="service_vehicle_count">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

</databaseChangeLog>