<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lw" id="business_category_stat_1">
    <createTable tableName="business_category_stat">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="business_category" type="varchar(500)"/>
      <column name="business_category_id" type="bigint"/>
      <column name="stat_date" type="bigint"/>
      <column name="stat_day" type="bigint"/>
      <column name="stat_month" type="bigint"/>
      <column name="stat_year" type="bigint"/>
      <column name="stat_type" type="varchar(50)"/>

      <column name="check_amount" type="double"/>
      <column name="union_pay" type="double"/>
      <column name="cash" type="double"/>
      <column name="total" type="double"/>

      <column name="money_category" type="varchar(50)"/>
    </createTable>
  </changeSet>

  <changeSet author="lw" id="business_category_stat_2">
    <addPrimaryKey tableName="business_category_stat" columnNames="id" constraintName="pk_business_category_stat"/>
  </changeSet>

</databaseChangeLog>
