<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lijie" id="template_1">
    <createTable tableName="template">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="true"/>
      </column>

      <column name="type" type="bigint"/>
      <column name="content" type="varchar(500)"/>
        <column name="status" type="bigint"/>
        <column name="last_editor_id" type="bigint"/>
        <column name="last_editor_name" type="varchar(20)"/>
        <column name="memo" type="varchar(500)"/>
    </createTable>

      <addPrimaryKey tableName="template" columnNames="id" constraintName="pk_template"/>

  </changeSet>

  <changeSet author="jimuchen" id="template_2">
    <modifyColumn tableName="template">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

</databaseChangeLog>