    <changeSet author="caiwei" id="failed_sms_job_1">
        <createTable tableName="failed_sms_job">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="shop_id" type="bigint"/>
            <column name="type" type="int"/>
            <column name="receive_mobile" type="varchar(20)"/>
            <column name="content" type="varchar(500)"/>
            <column name="user_id" type="bigint"/>
            <column name="sender" type="varchar(20)"/>
            <column name="name" type="varchar(20)"/>
            <column name="sms_id" type="varchar(50)"/>
            <column name="vehicle_license" type="varchar(20)"/>
            <column name="priority" type="int"/>
            <column name="send_times" type="int"/>
            <column name="start_time" type="bigint"/>
            <column name="expire_time" type="bigint"/>
            <column name="last_send_time" type="bigint"/>
            <column name="status" type="bigint"/>
        </createTable>

        <addPrimaryKey tableName="failed_sms_job" columnNames="id" constraintName="pk_failed_sms_job"/>


    </changeSet>

    <changeSet author="caiwei" id="failed_sms_job_2">
        <createIndex tableName="failed_sms_job" indexName="idx_failed_sms_job_shopid_send_time">
            <column name="shop_id"/>
            <column name="start_time"/>
        </createIndex>
    </changeSet>
    <changeSet author="ZhangJuntao" id="failed_sms_job_3">
