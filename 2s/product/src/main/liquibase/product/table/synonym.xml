<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="wujiaolong" id="synonym_1">
        <createTable tableName="synonym">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="uuid" type="char(36)"/>
            <column name="target_id" type="bigint"/>
            <column name="type" type="integer"/>
            <column name="word" type="varchar(200)"/>
            <column name="shop_id" type="bigint"/>
        </createTable>
        <addPrimaryKey tableName="synonym" columnNames="id" constraintName="pk_synonym"/>
    </changeSet>

  <changeSet author="jimuchen" id="synonym_2">
    <modifyColumn tableName="synonym">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

</databaseChangeLog>