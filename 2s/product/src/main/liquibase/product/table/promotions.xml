<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="xzhu" id="promotions_xzhu_1">
        <createTable tableName="promotions">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="shop_id" type="bigint"/>
            <column name="user_id" type="bigint"/>
            <column name="name" type="varchar(100)"/>

            <column name="start_time" type="bigint"/>
            <column name="end_time" type="bigint"/>

            <column name="type" type="varchar(50)"/>
            <column name="promotions_range" type="varchar(50)"/>
            <column name="deleted" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="promotions_xzhu_2" author="xzhu">
        <addPrimaryKey tableName="promotions" columnNames="id" constraintName="pk_promotions"/>
    </changeSet>

    <changeSet id="promotions_xzhu_3" author="xzhu">
        <createIndex tableName="promotions" indexName="idx_shop_id">
            <column name="shop_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="promotions_ndong_3" author="ndong">
        <addColumn tableName="promotions">
            <column name="description" type="varchar(500)"/>
            <column name="status" type="varchar(50)"/>
            <column name="promotions_limiter" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="promotions_ndong_4" author="ndong">
        <addColumn tableName="promotions">
            <column name="save_time" type="bigint"/>
            <column name="user_name" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="promotions_ndong_5" author="ndong">
        <addColumn tableName="promotions">
            <column name="time_flag" type="varchar(20)"/>
        </addColumn>
    </changeSet>

     <changeSet author="ndong" id="promotions_ndong_6">
        <addColumn tableName="promotions">
            <column name="shop_kind" type="varchar(20)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>