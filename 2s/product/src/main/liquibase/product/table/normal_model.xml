<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="chenfanglei" id="normal_model_1">
        <createTable tableName="normal_model">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="uuid" type="char(36)"/>
            <column name="name" type="varchar(200)"/>
            <column name="name_en" type="varchar(200)"/>
            <column name="normal_brand_id" type="bigint"/>
            <column name="state" type="bigint"/>
            <column name="memo" type="varchar(2000)"/>
            <column name="mfr_id" type="bigint"/>
            <column name="first_letter" type="varchar(200)"/>
            <column name="shop_id" type="bigint"/>
        </createTable>
        <addPrimaryKey tableName="normal_model" columnNames="id" constraintName="pk_normal_model"/>
    </changeSet>

    <changeSet author="chenfanglei" id="normal_model_2">
      <createIndex tableName="normal_model" indexName="idx_normal_model_brandid">
          <column name="normal_brand_id" />
      </createIndex>
  </changeSet>

  <changeSet author="chenfanglei" id="normal_model_3">
    <modifyColumn tableName="normal_model">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

</databaseChangeLog>