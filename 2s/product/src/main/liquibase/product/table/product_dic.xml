<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="xzhu" id="product_dic_1">
        <createTable tableName="product_dic">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="word" type="varchar(500)"/>
        </createTable>
        <addPrimaryKey tableName="product_dic" columnNames="id" constraintName="pk_product_dic"/>
    </changeSet>
    <changeSet id="product_dic_2" author="xzhu">
        <addColumn tableName="product_dic">
            <column name="type" type="varchar(100)"></column>
        </addColumn>
    </changeSet>
    <changeSet id="product_dic_3" author="xzhu">
        <addColumn tableName="product_dic">
            <column name="count" type="bigint"></column>
        </addColumn>
    </changeSet>
    <changeSet id="product_dic_4" author="xzhu">
        <addColumn tableName="product_dic">
            <column name="pinyin_sort" type="varchar(100)"></column>
        </addColumn>
    </changeSet>
</databaseChangeLog>