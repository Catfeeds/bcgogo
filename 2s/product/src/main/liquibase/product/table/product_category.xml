<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="liuWei" id="product_category_1">
    <createTable tableName="product_category">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="name" type="varchar(200)"/>
      <column name="parent_id" type="bigint"/>
      <column name="category_type" type="varchar(50)"/>
      <column name="status" type="varchar(50)"/>
    </createTable>
    <addPrimaryKey tableName="product_category" columnNames="id" constraintName="pk_product_category"/>
  </changeSet>
  <changeSet id="product_category_2" author="xzhu">
      <createIndex tableName="product_category" indexName="IDX_SHOP_ID_NAME">
          <column name="shop_id"/>
          <column name="name"/>
      </createIndex>
  </changeSet>
</databaseChangeLog>