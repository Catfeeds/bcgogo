<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="qiuxinyu" id="product_mapping_1">
        <createTable tableName="product_mapping">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="customer_product_id" type="bigint"/>
            <column name="customer_shop_id" type="bigint"/>
            <column name="supplier_product_id" type="bigint"/>
            <column name="supplier_shop_id" type="bigint"/>
            <column name="status" type="varchar(20)"/>
        </createTable>
        <addPrimaryKey tableName="product_mapping" columnNames="id" constraintName="pk_product_mapping"/>
    </changeSet>
    <changeSet author="xzhu" id="product_mapping_2">
        <addColumn tableName="product_mapping">
            <column name="supplier_id" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet author="dongnan" id="product_mapping_3_dongnan">
        <addColumn tableName="product_mapping">
            <column name="trade_status" type="varchar(20)"/>
        </addColumn>
    </changeSet>
    <changeSet author="xzhu" id="product_mapping_xzhu_4">
        <createIndex tableName="product_mapping" indexName="product_mapping_index_customer">
            <column name="customer_product_id"/>
            <column name="customer_shop_id"/>
            <column name="supplier_shop_id"/>
        </createIndex>
        <createIndex tableName="product_mapping" indexName="product_mapping_index_supplier">
            <column name="supplier_product_id"/>
            <column name="customer_shop_id"/>
            <column name="supplier_shop_id"/>
        </createIndex>
        <addColumn tableName="product_mapping">
            <column name="customer_last_purchase_date" type="bigint"/>
            <column name="customer_last_purchase_amount" type="double"/>
            <column name="customer_last_purchase_price" type="double"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>