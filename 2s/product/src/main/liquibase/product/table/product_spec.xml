<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="wujiaolong" id="product_spec_1">
        <createTable tableName="product_spec">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="uuid" type="char(36)"/>
            <column name="product_id" type="bigint"/>
            <column name="feature_id" type="bigint"/>
            <column name="feature" type="varchar(200)"/>
            <column name="dataType" type="integer"/>
            <column name="str" type="varchar(200)"/>
            <column name="integer" type="integer"/>

            <column name="dt" type="datetime"/>
            <column name="lstr" type="varchar(2000)"/>
            <column name="dec" type="decimal(18,4)"/>
            <column name="text" type="longtext"/>
            <column name="uid" type="char(36)"/>
            <column name="xml" type="longtext"/>
            <column name="file" type="longblob"/>
            <column name="shop_id" type="bigint"/>
        </createTable>
        <addPrimaryKey tableName="product_spec" columnNames="id" constraintName="pk_product_spec"/>
    </changeSet>

  <changeSet author="jimuchen" id="product_spec_2">
    <modifyColumn tableName="product_spec">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

</databaseChangeLog>