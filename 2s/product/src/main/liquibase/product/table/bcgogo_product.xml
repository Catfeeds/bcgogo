<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="xzhu" id="bcgogo_product_1">
        <createTable tableName="bcgogo_product">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="varchar(200)"/>
            <column name="text" type="varchar(200)"/>
            <column name="description" type="text"/>
        </createTable>
        <addPrimaryKey tableName="bcgogo_product" columnNames="id" constraintName="pk_bcgogo_product"/>
    </changeSet>
    <changeSet id="bcgogo_product_2" author="xzhu">
        <addColumn tableName="bcgogo_product">
            <column name="unit" type="varchar(50)"/>
        </addColumn>
    </changeSet>
    <changeSet id="bcgogo_product_3" author="xzhu">
        <addColumn tableName="bcgogo_product">
            <column name="show_to_shop_versions" type="varchar(500)"/>
        </addColumn>
    </changeSet>
    <changeSet id="bcgogo_product_4" author="xzhu">
        <addColumn tableName="bcgogo_product">
            <column name="image_path" type="varchar(200)"/>
        </addColumn>
    </changeSet>
    <changeSet id="bcgogo_product_5" author="xzhu">
        <addColumn tableName="bcgogo_product">
            <column name="payment_type" type="varchar(100)"/>
        </addColumn>
    </changeSet>
    <changeSet id="bcgogo_product_6" author="xzhu">
        <addColumn tableName="bcgogo_product">
            <column name="product_scene" type="varchar(100)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>