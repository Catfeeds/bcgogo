<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="xzhu" id="promotions_rule_xzhu_1">
        <createTable tableName="promotions_rule">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="promotions_id" type="bigint"/>
            <column name="level" type="int"/>
            <column name="min_amount" type="double"/>
            <column name="discount_amount" type="double"/>
        </createTable>
    </changeSet>

    <changeSet id="promotions_rule_xzhu_2" author="xzhu">
        <addPrimaryKey tableName="promotions_rule" columnNames="id" constraintName="pk_promotions_rule"/>
    </changeSet>
    <changeSet id="promotions_rule_xzhu_3" author="xzhu">
        <createIndex tableName="promotions_rule" indexName="idx_promotions_id">
            <column name="promotions_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="promotions_rule_ndong_3" author="ndong">
        <addColumn tableName="promotions_rule">
            <column name="promotions_rule_type" type="varchar(50)"/>
            <column name="shop_id" type="bigint"/>
            <column name="user_id" type="bigint"/>
            <column name="deleted" type="varchar(50)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>