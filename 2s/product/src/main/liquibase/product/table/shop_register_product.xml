<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="lw" id="shop_register_product_1">
    <createTable tableName="shop_register_product">
      <column name="id" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="shop_id" type="bigint"/>
      <column name="product_local_info_id" type="bigint"/>
      <column name="commodity_code" type="varchar(200)"/>
      <column name="name" type="varchar(200)"/>
      <column name="brand" type="varchar(200)"/>
      <column name="model" type="varchar(200)"/>
      <column name="spec" type="varchar(200)"/>
      <column name="product_vehicle_brand" type="varchar(200)"/>
      <column name="product_vehicle_model" type="varchar(200)"/>

    </createTable>
    <addPrimaryKey tableName="shop_register_product" columnNames="id" constraintName="pk_shop_register_product"/>
  </changeSet>

  <changeSet author="lw" id="shop_register_product_2">
    <createIndex tableName="shop_register_product" indexName="idx_shopid_productlocalinfoid">
      <column name="shop_id"/>
      <column name="product_local_info_id"/>
    </createIndex>
  </changeSet>

  <changeSet id="shop_register_product_3" author="lw">
    <addColumn tableName="shop_register_product">
      <column name="product_id" type="bigint"/>
      <column name="unit" type="varchar(50)"/>
    </addColumn>
  </changeSet>

</databaseChangeLog>