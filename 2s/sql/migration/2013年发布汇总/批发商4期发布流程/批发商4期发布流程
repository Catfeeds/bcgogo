  update user_guide_step set url = 'orderCenter.do?method=showOrderCenter',message = '商品上架-订单中心',next_step = 'PRODUCT_ONLINE_GUIDE_GOODS_ONLINE' where `name` in('PRODUCT_ONLINE_GUIDE_TXN');
