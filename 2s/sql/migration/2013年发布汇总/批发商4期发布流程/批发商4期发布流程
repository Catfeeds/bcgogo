  update user_guide_step set url = 'goodsInOffSales.do?method=goodsInOffSalesManage',previous_step = 'PRODUCT_ONLINE_GUIDE_TXN' where name = 'PRODUCT_ONLINE_GUIDE_GOODS_ONLINE';
