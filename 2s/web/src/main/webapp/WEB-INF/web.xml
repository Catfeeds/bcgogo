<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>BCGogo web application</display-name>

  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>bcgogo.root</param-value>
  </context-param>

  <context-param>
    <param-name>logback-config-file</param-name>
    <param-value>classpath:logback-api.xml</param-value>
  </context-param>

  <context-param>
    <param-name>com.bcgogo.jpa-context</param-name>
    <param-value>web</param-value>
  </context-param>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      classpath:/META-INF/security.xml,
      classpath:/META-INF/sms_application.xml,
      classpath:/META-INF/bizstat_schedule.xml,
      classpath:/META-INF/todo_application.xml,
      classpath:/META-INF/payment_application.xml,
      classpath:/META-INF/updateIndex_schedule.xml,
      classpath:/META-INF/recommend_application.xml,
      classpath:/META-INF/shopOperationTask_schedule.xml
      classpath:/META-INF/promotions_application.xml
      classpath:/META-INF/relatedShopUpdateTask_Schedule.xml
      classpath:/META-INF/vehicle_maintain_remind.xml
    </param-value>
  </context-param>

  <filter>
    <filter-name>requestPerformanceFilter</filter-name>
    <filter-class>com.bcgogo.filter.RequestPerformanceFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>requestPerformanceFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>

<!--zhangchuanlong-->
<filter>
  <filter-name>characterEncodingFilter</filter-name>
  <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
  <init-param>
   <param-name>encoding</param-name>
   <param-value>UTF-8</param-value>
  </init-param>
  <init-param>
   <param-name>forceEncoding</param-name>
   <param-value>true</param-value>
  </init-param>
</filter>

<filter-mapping>
  <filter-name>characterEncodingFilter</filter-name>
  <url-pattern>/*</url-pattern>
</filter-mapping>

  <filter>
    <filter-name>DebugTransactionResourceLeak</filter-name>
    <filter-class>com.bcgogo.web.spring.hibernate.DebugTransactionResourceLeak</filter-class>
    <init-param>
      <param-name>clearResourceLeak</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
    <filter-mapping>
    <filter-name>DebugTransactionResourceLeak</filter-name>
    <url-pattern>/web/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!--
  <filter>
    <filter-name>SessionTimeoutFilter</filter-name>
    <filter-class>com.bcgogo.filter.AjaxSessionFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>SessionTimeoutFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>  -->

  <context-param>
    <param-name>enable.quartz</param-name>
    <param-value>true</param-value>
  </context-param>

  <filter>
    <filter-name>charsetFilter</filter-name>
    <filter-class>com.bcgogo.filter.CharsetFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>charsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


    <filter>
        <filter-name>client</filter-name>
        <filter-class>com.bcgogo.filter.ClientFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>client</filter-name>
        <url-pattern>*.client</url-pattern>
    </filter-mapping>

  <filter>
    <filter-name>permission</filter-name>
    <filter-class>com.bcgogo.filter.AccessControlFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>permission</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>

    <!--<filter>-->
        <!--<filter-name>userGuide</filter-name>-->
        <!--<filter-class>com.bcgogo.filter.UserGuideFilter</filter-class>-->
    <!--</filter>-->
    <!--<filter-mapping>-->
        <!--<filter-name>userGuide</filter-name>-->
        <!--<url-pattern>*.do</url-pattern>-->
    <!--</filter-mapping>-->

  <context-param>
    <param-name>contextServiceFactory</param-name>
    <param-value>
        com.bcgogo.config.ConfigServiceFactory,
        com.bcgogo.product.ProductServiceFactory,
        com.bcgogo.productRead.ProductReadServiceFactory,
        com.bcgogo.txn.TxnServiceFactory,
        com.bcgogo.txnRead.TxnReadServiceFactory,
        com.bcgogo.user.UserServiceFactory,
        com.bcgogo.search.SearchServiceFactory,
        com.bcgogo.notification.NotificationServiceFactory,
        com.bcgogo.report.ReportServiceFactory,
        com.bcgogo.stat.StatServiceFactory,
        com.bcgogo.payment.PaymentServiceFactory,
        com.bcgogo.etl.EtlServiceFactory
    </param-value>
  </context-param>


  <listener>
    <listener-class>com.bcgogo.web.logback.LogBackContextListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.bcgogo.web.spring.hibernate.ContextListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.bcgogo.listener.EnhancedHttpSessionEventPublisher</listener-class>
  </listener>


  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/images/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/styles/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/js/*</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/test/*</url-pattern>
  </servlet-mapping>

  <!-- Handles all requests into the application -->
  <servlet>
    <servlet-name>Spring MVC Dispatcher Servlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
        /WEB-INF/spring/appServlet/servlet-context.xml
      </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Spring MVC Dispatcher Servlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>40</session-timeout>
  </session-config>

  <error-page>
    <error-code>404</error-code>
    <location>/login.jsp</location>
  </error-page>
