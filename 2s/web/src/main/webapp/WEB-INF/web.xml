 <error-page>
     <exception-type>org.springframework.web.HttpSessionRequiredException</exception-type>
     <location>/login.jsp</location>
 </error-page> -->

  <!--<error-page>
      <error-code>500</error-code>
      <location>/WEB-INF/views/main.jsp</location>
  </error-page>-->

  <welcome-file-list>
    <welcome-file></welcome-file>
  </welcome-file-list>
  <distributable/>
  
</web-app>
