<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--员工业绩统计-->
    <bean name="bizstat" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="com.bcgogo.schedule.stat.BizStatSchedule"/>
    </bean>

    <bean id="bizstatTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="bizstat"/>
        <property name="cronExpression" value="0 0 0 * * ?"/>
        <!--<property name="cronExpression" value="1 * * * * ?"/>-->
    </bean>

    <bean id="bizstatScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref local="bizstatTrigger"/>
            </list>
        </property>
    </bean>

    <!--上周销量、入库量统计-->
    <bean name="lastWeekSalesInventoryStat" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="com.bcgogo.schedule.stat.SalesInventoryWeekStatSchedule"/>
    </bean>

    <bean id="lastWeekSalesInventoryStatTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="lastWeekSalesInventoryStat"/>
        <property name="cronExpression" value="0 0 0 * * ?"/>
        <!--<property name="cronExpression" value="1 * * * * ?"/>-->
    </bean>

    <bean id="lastWeekSalesInventoryStatScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref local="lastWeekSalesInventoryStatTrigger"/>
            </list>
        </property>
    </bean>

    <!--urlMonitorStat-->
    <bean name="urlMonitorStat" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="com.bcgogo.schedule.stat.UrlMonitorStatSchedule"/>
    </bean>

    <bean id="urlMonitorStatTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="urlMonitorStat"/>
        <property name="cronExpression" value="0 0 0 * * ?"/>
        <!--<property name="cronExpression" value="1 * * * * ?"/>-->
    </bean>

    <bean id="urlMonitorStatScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref local="urlMonitorStatTrigger"/>
            </list>
        </property>
    </bean>


    <!--供应商点评统计-->
    <bean name="commentStat" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="com.bcgogo.schedule.stat.SupplierCommentSchedule"/>
    </bean>

    <bean id="supplierCommentStatTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="commentStat"/>
        <property name="cronExpression" value="0 0 */3 * * ?"/>
        <!--<property name="cronExpression" value="1 * * * * ?"/>-->
    </bean>

    <bean id="supplierCommentStatScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref local="supplierCommentStatTrigger"/>
            </list>
        </property>
    </bean>

    <!--手机端用户和店铺客户匹配-->
    <bean name="appUserCustomerMatch" class="org.springframework.scheduling.quartz.JobDetailBean">
      <property name="jobClass" value="com.bcgogo.schedule.stat.AppUserCustomerMatchSchedule"/>
    </bean>

    <bean id="appUserCustomerMatchTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
      <property name="jobDetail" ref="appUserCustomerMatch"/>
      <!--<property name="cronExpression" value="0 0 0 * * ?"/>-->
      <!--<property name="cronExpression" value="1 * * * * ?"/>-->
      <property name="cronExpression" value="0 */10 * * * ?"/> <!-- 10分钟执行一次成本分析监听 -->

    </bean>

    <bean id="appUserCustomerMatchScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
      <property name="triggers">
        <list>
          <ref local="appUserCustomerMatchTrigger"/>
        </list>
      </property>
    </bean>

