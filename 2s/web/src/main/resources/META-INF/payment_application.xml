<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--payment send quartz-->
    <bean name="paymentServiceJobDetail" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="com.bcgogo.schedule.payment.ChinapayQuerySchedule"/>
        <!--<property name="jobDataAsMap">
            <map>
                <entry key="maxCheckTimes" value="30"/>
            </map>
        </property>-->
    </bean>

    <bean id="paymentTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="paymentServiceJobDetail"/>
        <property name="cronExpression" value="0 0 0/1 * * ?"/>
    </bean>

    <bean id="paymentScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref local="paymentTrigger"/>
            </list>
        </property>
    </bean>

</beans>