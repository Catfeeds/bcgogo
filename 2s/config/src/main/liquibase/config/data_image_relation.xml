<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="xzhu" id="data_image_relation_1">
        <createTable tableName="data_image_relation">
            <column name="id" type="bigint"/>
            <column name="created" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="last_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="shop_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="data_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="image_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="data_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="image_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="image_sequence" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="xzhu" id="data_image_relation_2">
        <addPrimaryKey tableName="data_image_relation" columnNames="id" constraintName="pk_data_image_relation"/>
        <createIndex tableName="data_image_relation" indexName="index_shop_id_data_id">
            <column name="shop_id"/>
            <column name="data_id"/>
        </createIndex>
        <createIndex tableName="data_image_relation" indexName="index_image_id">
            <column name="image_id"/>
        </createIndex>
    </changeSet>
    <changeSet id="data_image_relation_3_qxy" author="SinYuQiu">
        <addColumn tableName="data_image_relation">
            <column name="app_user_no" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="data_image_relation_4_zhangjuntao" author="zhangjuntao">
        <modifyColumn tableName="data_image_relation">
            <column name="version" type="bigint" >
                <constraints nullable="false" />
            </column>
            <column name="shop_id" type="bigint" >
                <constraints nullable="true" />
            </column>
        </modifyColumn>
    </changeSet>
</databaseChangeLog>
