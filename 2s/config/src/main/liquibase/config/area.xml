<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="mzdong" id="area_1">
    <createTable tableName="area" >
      <column name="id" type="bigint"/>
      <column name="version" type="bigint"/>
      <column name="created" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="last_update" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="varchar(50)"/>
      <column name="no" type="bigint"/>
      <column name="parent_no" type="bigint"/>
    </createTable>
  </changeSet>

    <changeSet author="zoujianhong" id="area_2">
        <createIndex tableName="area" indexName="idx_area_parentno">
            <column name="parent_no"/>
        </createIndex>
    </changeSet>

  <changeSet author="jimuchen" id="area_3">
    <modifyColumn tableName="area">
      <column name="version" type="bigint" >
        <constraints nullable="false" />
      </column>
    </modifyColumn>
  </changeSet>

    <changeSet author="qiuxinyu" id="area_4">
        <addPrimaryKey tableName="area" columnNames="id" constraintName="pk_area"/>
        <createIndex tableName="area" indexName="idx_area_no">
            <column name="no"/>
        </createIndex>
    </changeSet>


    <changeSet author="zhangjuntao" id="area_5_zhangjuntao">
        <addColumn tableName="area">
            <column name="city_code" type="int"/>
        </addColumn>
    </changeSet>

    <changeSet author="zhangjuntao" id="area_6_zhangjuntao">
        <addColumn tableName="area">
            <column name="juhe_city_code" type="varchar(50)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
