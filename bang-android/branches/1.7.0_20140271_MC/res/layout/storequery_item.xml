<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/item_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shopslistitemback"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:id="@+id/shoplistpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/shoplistpicView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ok" />
            

            <!-- <ImageView
                android:id="@+id/shoplistpicbk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/shoppicview"
                android:visibility="invisible" /> -->
        </RelativeLayout>

        <TextView
            android:id="@+id/shoplistname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/shoplistpic"
            android:ellipsize="end"
            android:maxLines="1" 
            android:singleLine="true"
            android:text="Shop Name"
            android:textColor="#2b58af"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/shoplistlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoplistname"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/shoplistpic"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shoplistlike1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/whitestar" />

            <ImageView
                android:id="@+id/shoplistlike2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/whitestar" />

            <ImageView
                android:id="@+id/shoplistlike3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/whitestar" />

            <ImageView
                android:id="@+id/shoplistlike4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/whitestar" />

            <ImageView
                android:id="@+id/shoplistlike5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/whitestar" />

            <TextView
                android:id="@+id/shoplistlikesorce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="3.5分"
                android:textColor="#fd7801" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoplistdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoplistlike"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/shoplistpic"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/shopslistdistanceicon" />

            <TextView
                android:id="@+id/shoplistmeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="距离:1km"
                android:textColor="#797979"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoplistpalce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoplistdistance"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/shoplistpic"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/shopslistitemplace" />

            <TextView
                android:id="@+id/shoplistpalce_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Address"
                android:textColor="#797979"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoplistservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoplistpalce"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/shoplistpic"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/shopslistitemservice" />

            <TextView
                android:id="@+id/shoplistservice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="#797979"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_top"
        android:background="#f3f4f9"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/shoplistpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/shoplistpicbk0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shoppicview"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/shoplistpicbk0"
                android:layout_alignLeft="@id/shoplistpicbk0"
                android:layout_alignRight="@id/shoplistpicbk0"
                android:layout_alignTop="@id/shoplistpicbk0"
                android:layout_centerInParent="true"
                android:background="@drawable/shoppicview"
                android:padding="1dp" >

                <ImageView
                    android:id="@+id/shoplistpicView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ok" />
            </RelativeLayout>

            <!--
                 <ImageView
                android:id="@+id/shoplistpicView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/shoplistpicbk0"
                android:layout_alignLeft="@id/shoplistpicbk0"
                android:layout_alignRight="@id/shoplistpicbk0"
                android:layout_alignTop="@id/shoplistpicbk0"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:padding="1dp" />
            -->

            <ImageView
                android:id="@+id/shoplistpicbk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shoppicview" />
        </RelativeLayout>

        <TextView
            android:id="@+id/shoplistmeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:text="距离:1km"
            android:textColor="#797979"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/shoplistname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/shoplistmeter"
            android:layout_toRightOf="@id/shoplistpic"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="店铺名字"
            android:textColor="#2b58af"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/shopslistdetil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/shopslistdetil" />

        <LinearLayout
            android:id="@+id/shoplistlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoplistname"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/shoplistpic"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shoplistlike1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/whitestar" />

            <ImageView
                android:id="@+id/shoplistlike2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/whitestar" />

            <ImageView
                android:id="@+id/shoplistlike3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:src="@drawable/whitestar" />

            <ImageView
                android:id="@+id/shoplistlike4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/whitestar" />

            <ImageView
                android:id="@+id/shoplistlike5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/whitestar" />

            <TextView
                android:id="@+id/shoplistlikesorce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="3.5分"
                android:textColor="#fd7801" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoplistpalce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoplistlike"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/shoplistpic"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/shopslistitemplace" />

            <TextView
                android:id="@+id/shoplistpalce_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Address"
                android:textColor="#797979"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoplistservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoplistpalce"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/shoplistpic"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/shopslistitemservice" />

            <TextView
                android:id="@+id/shoplistservice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="#797979"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/shopslistline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/shoplistservice"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/line" />
    </RelativeLayout>

</RelativeLayout>
