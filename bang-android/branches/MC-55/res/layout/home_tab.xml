<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomBar"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/home_tab_bg"
    android:orientation="horizontal" >

    <RelativeLayout 
        android:id="@+id/tv1_select_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"      
        >
         <ImageView
        android:id="@+id/tv1_select"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home_tab_select" />

        <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_centerInParent="true"  
        >

         <ImageView
             android:id="@+id/tv1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:src="@drawable/home" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/tv1"
             android:layout_marginTop="2dp"
             android:textColor="#FFFFFF"
             android:textSize="12dp"
             android:text="首页" />

		</RelativeLayout>
    </RelativeLayout>
   

     <RelativeLayout 
        android:id="@+id/tv2_select_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"      
        >
         <ImageView
        android:id="@+id/tv2_select"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home_tab_select" />
         <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_centerInParent="true"  
        >
         
	   		 <ImageView
	        android:id="@+id/tv2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/mes" />
	   		          
	   				 <RelativeLayout
	   				     android:id="@+id/new_message_count_bg"
			   		      android:layout_width="wrap_content"
			   		      android:layout_height="wrap_content"
						  android:paddingLeft="10dp"
						  android:visibility="gone"
			   		      android:layout_centerHorizontal="true"
			   		      >
			   		  <RelativeLayout
			   		      android:layout_width="wrap_content"
			   		      android:layout_height="wrap_content"
			   		      android:layout_marginLeft="20dp"
			   		      android:background="@drawable/newmes"
			   		      android:gravity="center"
			   		      >
	
					        <TextView
					            	 android:id="@+id/new_message_count"
						             android:layout_width="wrap_content"
						             android:layout_height="wrap_content"
						             android:textColor="#FFFFFF"
						             android:textSize="10dp"
						             android:text="0" />
					        </RelativeLayout>
				        </RelativeLayout>
	   		 
	   		 <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/tv2"
             android:layout_marginTop="2dp"
             android:textColor="#FFFFFF"
             android:textSize="12dp"
             android:text="消息中心" />
    	</RelativeLayout>
    </RelativeLayout>

      <RelativeLayout 
        android:id="@+id/tv3_select_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"      
        >
         <ImageView
        android:id="@+id/tv3_select"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home_tab_select" />
         
        <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_centerInParent="true"  
        >
	         
	    <ImageView
	        android:id="@+id/tv3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:layout_centerHorizontal="true"
	        android:src="@drawable/set" />
	     <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/tv3"
             android:layout_marginTop="2dp"
             android:textColor="#FFFFFF"
             android:textSize="12dp"
             android:text="系统设置" />
	    </RelativeLayout>
    </RelativeLayout>

</LinearLayout>