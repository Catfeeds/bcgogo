<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_content"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/loginheadback" >

    <ImageButton
        android:id="@+id/titlebar_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_btn_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/titlebar_btn_text_size"
        android:minWidth="40dp"
        android:src="@drawable/back"
        android:background="@null" />

    <TextView
        android:id="@+id/titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#FFF"
        android:textSize="@dimen/titlebar_title_textSize" />

    <Button
        android:id="@+id/titlebar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_btn_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="@dimen/titlebar_btn_text_size"
        android:background="@drawable/ic_titlebar_btn_bg"
        android:textColor="#FFF" />
    
    <ProgressBar
        android:id="@+id/load_progress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        android:layout_toLeftOf="@id/titlebar_right_btn" />

</RelativeLayout>
