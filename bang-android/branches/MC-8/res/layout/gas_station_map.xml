<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Global_Match_Match"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        style="@style/Global_Match_Wrap"
        android:background="@drawable/loginheadback" >

        <RelativeLayout
            android:id="@+id/rl_gas_staion_map_back"
            android:layout_width="70dp"
            android:layout_height="40dp" >

            <ImageView
                style="@style/Global_Wrap_Wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            style="@style/Global_Wrap_Wrap"
            android:layout_centerInParent="true"
            android:text="加油站地图"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <RelativeLayout
             android:id="@+id/rl_gas_staion_map_detail"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" >

            <ImageView
                style="@style/Global_Wrap_Wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/maptolist" />
        </RelativeLayout>
    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mv_gas_staion_map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" >
    </com.baidu.mapapi.map.MapView>

</LinearLayout>