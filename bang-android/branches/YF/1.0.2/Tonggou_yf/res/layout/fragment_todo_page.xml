<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segment="http://schemas.android.com/apk/res/com.tonggou.yf.andclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <com.tonggou.yf.andclient.widget.view.SegmentView
        android:id="@+id/segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        segment:singleChildBackground="@drawable/selector_widget_segment_item_single"
        segment:leftChildBackground="@drawable/selector_widget_segment_item_left"
        segment:rightChildBackground="@drawable/selector_widget_segment_item_right"
        segment:centerChildBackground="@drawable/selector_widget_segment_item_center"/>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
