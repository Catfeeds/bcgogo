<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Match"
    android:background="#F5F5F5"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_5dp" >

    <LinearLayout
        android:id="@+id/track_time_container"
        style="@style/Wrap_Match"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/track_end_time"
            style="@style/Wrap_Wrap"
            android:textSize="@dimen/text_h4" />

        <TextView
            android:id="@+id/track_end_date"
            style="@style/Wrap_Wrap"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_h5" />

        <TextView
            android:id="@+id/track_start_time"
            style="@style/Wrap_Match"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="@dimen/text_h4" />

        <TextView
            android:id="@+id/track_start_date"
            style="@style/Wrap_Wrap"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_h5" />
    </LinearLayout>

    <ImageView
        android:id="@+id/driving_track_indicator"
        style="@style/Wrap_Match"
        android:layout_margin="2dp"
        android:background="@drawable/ic_driving_track_time_line_selected" />

    <LinearLayout
        style="@style/Match_Match"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/Match_Wrap"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/track_end_address"
                style="@style/Wrap_Wrap"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_h3" />

            <TextView
                android:id="@+id/track_end_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_h5" />
        </LinearLayout>

        <com.tonggou.gsm.andclient.ui.view.DrivingTrackStatisticsContainer
            android:id="@+id/driving_track_statistics_info"
            style="@style/Match_Wrap"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_corner_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" />

        <LinearLayout
            style="@style/Match_Wrap"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/track_start_address"
                style="@style/Wrap_Wrap"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:textSize="@dimen/text_h3" />

            <TextView
                android:id="@+id/track_start_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_h5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>