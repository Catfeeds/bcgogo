<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:indicatorView="http://schemas.android.com/apk/res/com.tonggou.gsm.andclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/ptr_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border_white_content_bg"
                android:orientation="vertical" >

                <com.tonggou.gsm.andclient.ui.view.IndicatorTextView
                    android:id="@+id/receipt_no_indicator_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_list_title"
                    android:padding="@dimen/dimen_10dp"
                    indicatorView:leftIndicatorText="@string/paid_no"
                    indicatorView:leftIndicatorTextColor="@color/gray"
                    indicatorView:leftIndicatorTextLength="5" />

                <com.tonggou.gsm.andclient.ui.view.IndicatorTextView
                    android:id="@+id/service_type_indicator_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/divider_horizontal_bg"
                    android:padding="@dimen/dimen_10dp"
                    indicatorView:leftIndicatorText="@string/paid_type"
                    indicatorView:leftIndicatorTextColor="@color/gray"
                    indicatorView:leftIndicatorTextLength="5" />

                <com.tonggou.gsm.andclient.ui.view.IndicatorTextView
                    android:id="@+id/paid_money_indicator_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/divider_horizontal_bg"
                    android:padding="@dimen/dimen_10dp"
                    indicatorView:leftIndicatorText="@string/paid_money"
                    indicatorView:leftIndicatorTextColor="@color/gray"
                    indicatorView:leftIndicatorTextLength="5"
                    indicatorView:mainTextViewTextColor="@color/red" />

                <com.tonggou.gsm.andclient.ui.view.IndicatorTextView
                    android:id="@+id/vehicle_no_indicator_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/divider_horizontal_bg"
                    android:padding="@dimen/dimen_10dp"
                    indicatorView:leftIndicatorText="@string/paid_vehicle_no"
                    indicatorView:leftIndicatorTextColor="@color/gray"
                    indicatorView:leftIndicatorTextLength="5" />

                <com.tonggou.gsm.andclient.ui.view.IndicatorTextView
                    android:id="@+id/vehicle_brand_indicator_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/divider_horizontal_bg"
                    android:padding="@dimen/dimen_10dp"
                    indicatorView:leftIndicatorText="@string/paid_vehicle_type"
                    indicatorView:leftIndicatorTextColor="@color/gray"
                    indicatorView:leftIndicatorTextLength="5" />

                <com.tonggou.gsm.andclient.ui.view.IndicatorTextView
                    android:id="@+id/service_timestamp_indicator_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/divider_horizontal_bg"
                    android:padding="@dimen/dimen_10dp"
                    indicatorView:leftIndicatorText="@string/paid_timestamp"
                    indicatorView:leftIndicatorTextColor="@color/gray"
                    indicatorView:leftIndicatorTextLength="5" />

                <com.tonggou.gsm.andclient.ui.view.IndicatorTextView
                    android:id="@+id/contact_indicator_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/divider_horizontal_bg"
                    android:padding="@dimen/dimen_10dp"
                    indicatorView:leftIndicatorText="@string/paid_contact"
                    indicatorView:leftIndicatorTextColor="@color/gray"
                    indicatorView:leftIndicatorTextLength="5" />

                <com.tonggou.gsm.andclient.ui.view.IndicatorTextView
                    android:id="@+id/phone_no_indicator_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:padding="@dimen/dimen_10dp"
                    indicatorView:leftIndicatorText="@string/paid_phone_no"
                    indicatorView:leftIndicatorTextColor="@color/gray"
                    indicatorView:leftIndicatorTextLength="5" />
            </LinearLayout>

            <com.tonggou.gsm.andclient.ui.view.ServiceHistoryItemContainer
                android:id="@+id/payment_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border_white_content_bg"
                android:layout_marginTop="@dimen/dimen_10dp" />
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>