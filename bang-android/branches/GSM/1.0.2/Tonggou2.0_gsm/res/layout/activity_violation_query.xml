<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/gold" />

    <TextView
        android:id="@+id/vehicle_no_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="苏E25V29"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/total_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="累积扣分：4" />

    <TextView
        android:id="@+id/total_money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="累计罚款：400元" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近违章信息"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@id/ptr_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/key_last_update_time_violation_record_listview"
        android:layout_weight="1" />

</LinearLayout>
