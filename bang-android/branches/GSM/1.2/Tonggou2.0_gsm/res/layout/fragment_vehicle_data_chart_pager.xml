<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >

    <HorizontalScrollView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none">
    <RadioGroup
        android:id="@+id/line_chart_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/mileage_radioBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/subtab_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/subtitle_mileage"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h4" />

        <RadioButton
            android:id="@+id/oilwear_radioBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/subtab_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/subtitle_oilwear"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h4" />

        <RadioButton
            android:id="@+id/avg_oilwear_radioBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/subtab_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/subtitle_avg_oilwear"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h4" />

        <RadioButton
            android:id="@+id/money_radioBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/subtab_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/subtitle_money"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h4" />
    </RadioGroup>
</HorizontalScrollView>
    <com.tonggou.gsm.andclient.ui.view.UnPagingViewPager
        android:id="@+id/chart_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    
</LinearLayout>