<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_content"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/loginheadback"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <ImageButton
        android:id="@+id/titlebar_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_btn_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="left|center_vertical"
        android:minWidth="40dp"
        android:src="@drawable/back"
        android:textSize="@dimen/titlebar_btn_text_size" />

    <TextView
        android:id="@+id/titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#FFF"
        android:textSize="@dimen/titlebar_title_textSize" />

    <LinearLayout
        android:id="@+id/titlebar_right_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/load_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible" />
        
        <Button
            android:id="@+id/titlebar_right_second_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_btn_height"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_titlebar_btn_bg"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#FFF"
            android:textSize="@dimen/text_h4" />
        
        <Button
            android:id="@+id/titlebar_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_btn_height"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_titlebar_btn_bg"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#FFF"
            android:textSize="@dimen/titlebar_btn_text_size" />

        
    </LinearLayout>

</RelativeLayout>