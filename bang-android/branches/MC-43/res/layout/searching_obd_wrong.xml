<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/searchpasswordbk"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical" >

  

    <TextView
        android:id="@+id/content_text_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp" 
        android:textColor="#ffffff" 
        android:text="@string/connect_obd_wrong"/>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/connect_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/connect_obd_retry"
        android:gravity="center"
        android:text="@string/connect_obd_retry"
        android:textColor="#ffffff"
        android:textSize="20dp" />
        
        <TextView
        android:id="@+id/connect_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ok"
        android:gravity="center"
        android:text="@string/connect_obd_cancel"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    </LinearLayout>
    

</LinearLayout>