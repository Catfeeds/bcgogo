<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Global_Match_Match"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        style="@style/Global_Match_Wrap"
        android:background="@drawable/loginheadback" >

        <RelativeLayout
            android:id="@+id/rl_gas_staion_map_back"
            android:layout_width="70dp"
            android:layout_height="40dp" >

            <ImageView
                style="@style/Global_Wrap_Wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_gas_staion_map_title"
            style="@style/Global_Wrap_Wrap"
            android:layout_centerInParent="true"
            android:text="@string/gas_station_map"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/rl_gas_staion_map_detail"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true" >

            <ImageView
                style="@style/Global_Wrap_Wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/maptolist" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout style="@style/Global_Match_Match" >

        <RelativeLayout
            android:id="@+id/rl_gas_staion_map_covering"
            style="@style/Global_Match_Match" >

            <TextView
                android:id="@+id/tv_gas_staion_map_loading"
                style="@style/Global_Wrap_Wrap"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:text="@string/gas_staion_map_loading"
                android:textColor="#30000000"
                android:textSize="14sp" />

            <ProgressBar
                style="@style/Global_Wrap_Wrap"
                android:layout_above="@id/tv_gas_staion_map_loading"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_gas_staion_map_loading"
                style="@style/Global_Wrap_Wrap"
                android:layout_above="@id/tv_gas_staion_map_loading"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gas_station_downloading_anim_list"
                android:orientation="horizontal" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_gas_staion_map_no_network"
            style="@style/Global_Match_Match"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                style="@style/Global_Wrap_Wrap"
                android:layout_marginTop="60dp"
                android:src="@drawable/gas_station_detail_network_error" />

            <TextView
                style="@style/Global_Wrap_Wrap"
                android:layout_marginTop="35dp"
                android:text="@string/gas_station_detail_network_error"
                android:textColor="#66000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_gas_staion_map_retry"
                style="@style/Global_Wrap_Wrap"
                android:layout_marginTop="35dp"
                android:background="@drawable/gas_station_detail_retry_selector"
                android:text="@string/gas_station_detail_network_error_retry"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>

        <com.baidu.mapapi.map.MapView
            android:id="@+id/mv_gas_staion_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:visibility="gone" >
        </com.baidu.mapapi.map.MapView>
    </FrameLayout>

</LinearLayout>