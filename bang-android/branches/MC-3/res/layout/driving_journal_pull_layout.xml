<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_driving_journal_pull_layout"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/Global_vertical_weight"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/Global_horizontal_weight"
                android:orientation="vertical" >

                <ImageView
                    style="@style/imgView_driving_journal_style1"
                    android:src="@drawable/icon_driving_distance" />

                <TextView
                    android:id="@+id/txt_driving_distance"
                    style="@style/txt_driving_journal_style1"
                    android:text="20公里" />

                <TextView
                    style="@style/txt_driving_journal_style2"
                    android:text="行车里程" />
            </LinearLayout>

            <LinearLayout
                style="@style/Global_horizontal_weight"
                android:orientation="vertical" >

                <ImageView
                    style="@style/imgView_driving_journal_style1"
                    android:src="@drawable/icon_driving_time" />

                <TextView
                    android:id="@+id/txt_driving_time"
                    style="@style/txt_driving_journal_style1"
                    android:singleLine="true"
                    android:text="36.2小时" />

                <TextView
                    style="@style/txt_driving_journal_style2"
                    android:text="行车时长" />
            </LinearLayout>

            <LinearLayout
                style="@style/Global_horizontal_weight"
                android:orientation="vertical" >

                <ImageView
                    style="@style/imgView_driving_journal_style1"
                    android:src="@drawable/icon_driving_oil_used" />

                <TextView
                    android:id="@+id/txt_driving_oil_used"
                    style="@style/txt_driving_journal_style1"
                    android:text="2升" />

                <TextView
                    style="@style/txt_driving_journal_style2"
                    android:text="耗油量" />
            </LinearLayout>

            <LinearLayout
                style="@style/Global_horizontal_weight"
                android:orientation="vertical" >

                <ImageView
                    style="@style/imgView_driving_journal_style1"
                    android:src="@drawable/icon_driving_oil_cost" />

                <TextView
                    android:id="@+id/txt_driving_oil_cost"
                    style="@style/txt_driving_journal_style1"
                    android:text="132.5元" />

                <TextView
                    style="@style/txt_driving_journal_style2"
                    android:text="油费" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_driving_journal_arrow"
            style="@style/Global_vertical_weight"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical" >

            <TextView
                style="@style/Global_Wrap_Wrap"
                android:text="今天"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgView_driving_journal_arrow"
                style="@style/Global_Wrap_Wrap"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_arrow1_down" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Global_Match_Wrap"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/Global_Match_Wrap"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgView_driving_journal_calendar_day"
                style="@style/Global_Wrap_Wrap"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_calendar_day_selected" />

            <ImageView
                android:id="@+id/imgView_driving_journal_calendar_week"
                style="@style/Global_Wrap_Wrap"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_calendar_week_normal" />

            <ImageView
                android:id="@+id/imgView_driving_journal_calendar_month"
                style="@style/Global_Wrap_Wrap"
                android:background="@drawable/icon_calendar_month_normal" />
        </LinearLayout>

        <HorizontalScrollView
            style="@style/Global_Match_Match"
            android:layout_marginTop="5dp" >

            <LinearLayout style="@style/Global_Match_Match" >

                <GridView
                    android:id="@+id/gv_driving_journal_calendar"
                    style="@style/Global_Match_Match"
                    android:background="@android:color/transparent"
                    android:cacheColorHint="#00000000"
                    android:columnWidth="30dp"
                    android:horizontalSpacing="3dp"
                    android:stretchMode="none" >
                </GridView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>