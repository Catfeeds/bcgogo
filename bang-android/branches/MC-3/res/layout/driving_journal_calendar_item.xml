<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Global_Match_Match" >

    <LinearLayout
        style="@style/Global_Match_Match"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgView_driving_journal_calendar_item_left"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/icon_sort_by_separator"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_driving_journal_calendar_item"
            style="@style/txt_driving_journal_calendar_item_dim"
            android:text="15" />

        <ImageView
            android:id="@+id/imgView_driving_journal_calendar_item_right"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/icon_sort_by_separator"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>