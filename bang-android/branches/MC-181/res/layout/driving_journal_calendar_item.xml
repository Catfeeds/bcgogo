<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Global_Wrap_Wrap"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <FrameLayout
        style="@style/Global_Wrap_Wrap"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/ll_driving_journal_calendar_item"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_driving_journal_calendar_item_month"
                style="@style/txt_driving_journal_calendar_item_dim"
                android:layout_marginTop="5dp"
                android:text="2月" />

            <TextView
                android:id="@+id/txt_driving_journal_calendar_item_day"
                style="@style/txt_driving_journal_calendar_item_dim"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="23" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_driving_journal_calendar_item_month2"
            style="@style/txt_driving_journal_calendar_item_dim"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="5月"
            android:textSize="18sp"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>